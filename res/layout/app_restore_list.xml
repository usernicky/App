<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ListView
            android:id="@+id/list_restore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="#00000000"
            android:listSelector="#00000000"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/list_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/just_nothing_show_iv"
                android:layout_width="@dimen/kongbaiye_width_height"
                android:layout_height="@dimen/kongbaiye_width_height"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_nothing_show" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/just_nothing_show_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/no_app_backuped"
                android:textColor="@color/nothing_show_text"
                android:textSize="@dimen/kongbaiye_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>