<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mode_active_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="@dimen/home_lock_mode_active_tip_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mode_active_icon"
            android:layout_width="@dimen/home_lock_mode_active_tip_image_width"
            android:layout_height="@dimen/home_lock_mode_active_tip_image_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/home_lock_mode_active_tip_image_margin_top"
            android:src="@drawable/mode_enabled" />

        <TextView
            android:id="@+id/active_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/home_lock_mode_active_tip_text_margin_bottom"
            android:layout_marginTop="@dimen/home_lock_mode_active_tip_text_margin_top"
            android:textColor="#565656"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>