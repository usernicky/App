<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mode_active_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >
    
    <LinearLayout
    android:layout_width="@dimen/home_lock_mode_active_tip_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <FrameLayout
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:background="@drawable/mode_animation_bg"
         android:layout_marginTop="@dimen/home_lock_mode_active_tip_image_margin_top"
        android:orientation="vertical" >
        
          <com.leo.appmaster.ui.LeoCircleView
            android:id="@+id/mode_active_bg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/mode_active_in"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:src="@drawable/visitor_mode"
            android:visibility="gone" 
            />
         <ImageView
            android:id="@+id/mode_active_out"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:src="@drawable/default_mode" />

         <ImageView
             android:id="@+id/mode_active_down"
             android:layout_width="30dp"
             android:layout_height="24dp"
             android:layout_marginLeft="44dp"
             android:layout_marginTop="44dp"
             android:visibility="gone"/>

    </FrameLayout>
    
     <TextView
            android:id="@+id/active_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/home_lock_mode_active_tip_text_margin_bottom"
            android:layout_marginTop="@dimen/home_lock_mode_active_tip_text_margin_top"
            android:textColor="#565656"
            android:text="ddddddd"
            android:textSize="14sp" />
</LinearLayout>
</LinearLayout>