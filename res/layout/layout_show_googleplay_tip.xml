<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/common_dialog_bg"
        android:orientation="vertical" >

        <!-- android:background="@drawable/dialog_box_install" -->

        <com.leo.appmaster.ui.FiveStarsLayout
            android:id="@+id/fsl_fivestars"
            android:layout_width="match_parent"
            android:layout_height="172dp" />

        <LinearLayout
            android:id="@+id/grade_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:clickable="true"
                app:rv_alpha="255"
                app:rv_color="@color/button_gray_ripple"
                app:rv_zoomDuration="100" >

                <TextView
                    android:id="@+id/tv_feedback"
                    style="@style/dlg_left_button_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/grade_tip_feedback" />
            </com.leo.appmaster.ui.RippleView>

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                app:rv_alpha="255"
                app:rv_color="@color/button_blue_ripple"
                app:rv_zoomDuration="100" >

                <TextView
                    android:id="@+id/tv_make"
                    style="@style/dlg_right_button_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/grade" />
            </com.leo.appmaster.ui.RippleView>
        </LinearLayout>

        <!--
             <TextView
            android:layout_below="@id/fsl_fivestars"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp"
            android:text="@string/grade_tip"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="17dp" />
        -->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fsl_fivestars"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:maxLines="3"
            android:paddingLeft="34dp"
            android:paddingRight="34dp"
            android:text="@string/dialog_fivestars_content_text"
            android:textColor="@color/c3"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>