<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_intrudercatch_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebed"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ebebed"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="#2675f6" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="9dp"
                    android:text="@string/app_name"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rv_close"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="18dp"
                app:rv_alpha="255"
                app:rv_color="@color/button_blue_ripple" >

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/close_in_catch" />
            </com.leo.appmaster.ui.RippleView>

            <TextView
                android:id="@+id/tv_times_of_catch"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="155dp"
                android:text="@string/intruder_times_of_catch"
                android:textColor="#c6dbff"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="46dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="158dp"
                android:maxLines="2"
                android:text="@string/home_tab_instruder"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="151dp"
                android:layout_height="94dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/man_in_catch" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_times_to_catch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/intruder_to_catch_fail_times_tip"
                android:textColor="#333333"
                android:textSize="15dp" />

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rv_change_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:maxWidth="90dp"
                android:minWidth="52dp"
                app:rv_alpha="255"
                app:rv_color="@color/button_blue_stroke_ripple" >

                <Button
                    android:id="@+id/bt_change_times"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/while_bg_blue_line"
                    android:maxWidth="90dp"
                    android:minWidth="52dp"
                    android:text="@string/change_times_to_catch"
                    android:textColor="#2674f6" />
            </com.leo.appmaster.ui.RippleView>
        </LinearLayout>

        <!-- 切换有图片和无图片 -->

        <RelativeLayout
            android:id="@+id/rl_newest_nopic"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/rl_newest"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/iv_app_intruded"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/newest_catch_tip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_app_intruded"
                    android:gravity="center_vertical"
                    android:text="@string/newest_catch_tip"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="40dp" >

                    <com.leo.appmaster.intruderprotection.BottomCropImage
                        android:id="@+id/iv_newest_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/ll_main_mask"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:background="#00000000"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/iv_appicon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="8dp" />

                        <TextView
                            android:id="@+id/tv_timestamp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:gravity="center_vertical"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_nopic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/iv_nopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/intruder_nopic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/iv_nopic"
                    android:gravity="center"
                    android:text="@string/intruder_nobody_tips"
                    android:textColor="#cbcbcb"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ad_or_fivestars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_fivestars_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="visible" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/ask_like_app"
                    android:textColor="#333333" />

                <com.leo.appmaster.ui.FiveStarsLayout
                    android:id="@+id/fsl_fivestars"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="5dp" />
                    
                
                <!-- <RelativeLayout
                    android:id="@+id/rl_fivestars"
                    android:layout_width="match_parent"
