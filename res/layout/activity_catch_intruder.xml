                        android:layout_marginRight="25dp" -->

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fsl_fivestars"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical|left"
                    android:text="@string/beg_five_star"
                    android:textColor="@color/c2"
                    android:textSize="14dp" />

                <com.leo.appmaster.ui.RippleView
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/rv_fivestars"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:rv_alpha="255"
                    app:rv_color="@color/button_green_ripple" >

                    <Button
                        android:id="@+id/bt_beg_fivestars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_radius_btn_shape"
                        android:text="@string/grade"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />
                </com.leo.appmaster.ui.RippleView>
            </LinearLayout>

            <!-- AD -->

            <RelativeLayout
                android:id="@+id/rl_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:padding="12dp"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/white_bg_gray_line" >

                    <ImageView
                        android:id="@+id/iv_ad_iconpic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginRight="82dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_appname"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:maxLines="1"
                            android:textColor="#333333"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_appdesc"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:maxLines="2"
                            android:textColor="#999999"
                            android:textSize="9dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_ad_call"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/select_bt_halfscreen_install"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="13dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="157dp" >

                    <ImageView
                        android:id="@+id/iv_ad_mainpic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ad_signal" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/tv_others"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/intruder_more"
                android:textColor="#333333" />

            <ListView
                android:id="@+id/lv_mainlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:divider="#ffffff"
                android:dividerHeight="8dp"
                android:scrollbars="none" >
            </ListView>

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rv_more"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:rv_alpha="255"
                app:rv_color="@color/button_blue_ripple" >

                <Button
                    android:id="@+id/bt_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2675f6"
                    android:text="@string/intruder_pic_more"
                    android:textColor="#ffffff" />
            </com.leo.appmaster.ui.RippleView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>