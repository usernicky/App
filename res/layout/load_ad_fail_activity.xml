<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_superman_ADdialog_nodata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3000000"
    android:gravity="center" 
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_superman_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ufo_rollagain" />

    <TextView
        android:id="@+id/tv_superman_nodata_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="@string/ad_timeout"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/superman_btn_rollagain"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/selector_button_rollagain"
        android:gravity="center"
        android:text="@string/ufo_roll_again"
        
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>