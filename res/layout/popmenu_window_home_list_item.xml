<com.leo.appmaster.ui.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    ripple:rv_color="@color/white_list_item_ripple"
    ripple:rv_rippleDuration="@integer/ripple_btn_duration"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:src="@drawable/reset_pasword_icon" />


    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="158dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/menu_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="dfd"
        android:textColor="#333333"
        android:textSize="12dp" />

</com.leo.appmaster.ui.RippleView>