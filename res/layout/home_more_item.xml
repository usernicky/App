<?xml version="1.0" encoding="utf-8"?>
<com.leo.appmaster.ui.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_tab_selector"
    android:paddingRight="14dp">

    <ImageView
        android:id="@+id/more_icon_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/more_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/more_icon_iv"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_up_right"
        android:layout_marginRight="6dp" />

    <View
        android:id="@+id/more_divider"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_height="1px"
        android:background="@color/divider_2" />

    <ImageView
        android:id="@+id/more_red_tip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/red_dot"
        android:visibility="gone"/>

</com.leo.appmaster.ui.RippleView>