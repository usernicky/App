<?xml version="1.0" encoding="utf-8"?>
<com.leo.appmaster.battery.BatteryBoostController xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!--  <ImageView
        android:src="@drawable/battery_boost_gradient_shape"
        android:layout_centerInParent="true"
        android:layout_width="162dp"
        android:layout_height="162dp" />-->

    <RelativeLayout
        android:id="@+id/boost_anim_rl"
        android:layout_width="193dp"
        android:background="@drawable/battery_boost_gradient_shape"
        android:layout_height="193dp"
        android:layout_centerInParent="true"
        android:padding="@dimen/battery_boost_padding">

        <ImageView
            android:id="@+id/boost_anim_iv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/boost_anim_iv2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/boost_anim_iv3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/boost_anim_iv4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <com.leo.appmaster.battery.BatteryBoostAnimView
        android:id="@+id/boost_anim_containor"
        android:layout_width="193dp"
        android:layout_height="193dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/rl_shield"
        android:layout_width="213dp"
        android:layout_height="213dp"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_shield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="35dp"
            android:src="@drawable/batterymanage_shield"
            android:visibility="visible" />

        <com.leo.appmaster.ui.CircleArroundView
            android:id="@+id/cav_batterymain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_margin="0dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/boost_toast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boost_anim_containor"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/f5"
        android:textColor="@color/c1"
        android:layout_marginTop="50dp"
        android:text="@string/battery_boosting" />

    <LinearLayout
        android:id="@+id/charge_clean_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/boost_anim_containor"
        android:layout_centerHorizontal="true"
        android:background="@drawable/charge_clean_result_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/charge_clean_finish"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/charge_clean_result_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/c2"
            android:textSize="@dimen/f5a"
            android:layout_marginRight="14dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</com.leo.appmaster.battery.BatteryBoostController>