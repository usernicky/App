<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.leo.appmaster.battery.BatteryBoostAnimView
        android:id="@+id/boost_anim_containor"
        android:layout_width="193dp"
        android:layout_height="193dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/boost_anim_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/boost_anim_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/boost_anim_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />
    </com.leo.appmaster.battery.BatteryBoostAnimView>



    <!--<ImageView
        android:src="@drawable/battery_boost_gradient_shape"
        android:layout_centerInParent="true"
        android:layout_width="100dp
        android:layout_height="100dp" />-->

</RelativeLayout>