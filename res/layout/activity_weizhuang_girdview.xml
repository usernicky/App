<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <RelativeLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:background="@color/toolbar_background_color"> -->

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/weizhuang_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- <RelativeLayout -->
    <!-- android:id="@+id/trffic_setting_iv" -->
    <!-- android:layout_width="@dimen/app_manager_flowactivity_small_icon_width_height" -->
    <!-- android:layout_height="50dp" -->
    <!-- android:layout_alignParentRight="true" -->
    <!-- android:background="@drawable/traffic_small_icon_selector" -->
    <!-- android:visibility="gone"></RelativeLayout> -->


    <!-- <ImageView -->
    <!-- android:id="@+id/weizhuang_ask_iv" -->
    <!-- android:layout_width="24dp" -->
    <!-- android:layout_height="24dp" -->
    <!-- android:layout_alignParentRight="true" -->
    <!-- android:layout_marginRight="16dp" -->
    <!-- android:layout_marginTop="15dp" -->
    <!-- android:background="@drawable/help_icon_n" -->
    <!-- android:visibility="gone" /> -->
    <!-- </RelativeLayout> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_backgroud"
        android:orientation="vertical"
        android:padding="@dimen/new_app_manager_padding" >

        <!--
                      <com.leo.appmaster.ui.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleAlpha="0.2"
            app:rippleColor="#585858"
            app:rippleHover="true"
            app1:rippleInAdapter="true"
            app:rippleOverlay="false">
        -->

        <GridView
            android:id="@+id/gv_weizhuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />
        <!-- </com.leo.appmaster.ui.MaterialRippleLayout> -->

        <LinearLayout
            android:id="@+id/activity_weizhuang_firstin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:layout_width="@dimen/home_lock_mode_guide_image_width"
                android:layout_height="@dimen/home_lock_mode_guide_image_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/weizhaung_guide_image_margin_top"
                android:background="@drawable/disguise_tips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="@dimen/home_lock_mode_guide_text_margin_top"
                android:text="@string/weizhuang_first_in_text"
                android:textColor="@color/weisuo_text_show"
                android:textSize="@dimen/home_lock_mode_guide_text_size" />

            <com.leo.appmaster.ui.RippleView
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rv_know_button"
                android:layout_width="@dimen/home_lock_mode_guide_btn_width"
                android:layout_height="@dimen/home_lock_mode_guide_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/home_lock_mode_guide_btn_margin_top"
                android:background="@drawable/blue_radius_btn_shape"
                android:clickable="true"
                ripple:rv_color="@color/button_blue_ripple" >

                <TextView
                    android:id="@+id/bt_go"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/first_in_sure_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_lock_mode_guide_text_size" />

                <!-- android:background="@drawable/manager_done_button_selecter" -->
            </com.leo.appmaster.ui.RippleView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>