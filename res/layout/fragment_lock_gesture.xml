<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/iv_app_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ges_icon_m_top">

        <!-- android:layout_marginBottom="@dimen/ges_icon_m_bottom" -->
        <!-- android:layout_above="@+id/tv_gesture_tip" -->

        <ImageView
            android:id="@+id/iv_app_icon_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@color/transparent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/fragment_lock_password_appicon_width"
            android:layout_height="@dimen/fragment_lock_password_appicon_height"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_app_icon_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@color/transparent"
            android:visibility="invisible"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_gesture_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_app_icon_layout"
        android:layout_marginTop="@dimen/testview_below_icon"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/please_input_gesture"
        android:textColor="#aaffffff"
        android:textSize="16dp"
        android:visibility="gone"/>


    <com.leo.appmaster.applocker.gesture.LockPatternView
        android:id="@+id/gesture_lockview"
        android:layout_width="@dimen/lockPatternView_height"
        android:layout_height="@dimen/lockPatternView_height"
        android:layout_below="@id/tv_gesture_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ges_Pattern_m_top"/>


    <RelativeLayout
        android:id="@+id/airsig_lock"
        android:layout_width="@dimen/air_sig_lock_patten_width"
        android:layout_height="@dimen/air_sig_lock_patten_height"
        android:layout_below="@id/tv_gesture_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ges_Pattern_air_sig_m_top"
        android:background="@drawable/airsig_bg"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/progressBarWaiting"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textResultMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:lineSpacingExtra="1dp"
                    android:text="@string/airsig_verify_press_hint"
                    android:textSize="@dimen/airsig_textsize_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textTouchAreaMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textResultMessage"
                    android:layout_gravity="center_horizontal"
                    android:lineSpacingExtra="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center"
                    android:text="@string/airsig_verify_press_hint"
                    android:textColor="@color/airsig_text_white"
                    android:textSize="@dimen/airsig_textsize_content"/>

            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarWaiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/switch_bottom_content"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fragment_lock_gesture_setting_tv_bottom_marginbottom"
        android:background="@drawable/reset_pass_frame"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="3dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_reset_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/switch_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/iv_reset_icon"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="12dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="1px"
        android:layout_height="1px"/>

    <SurfaceView
        android:layout_width="1px"
        android:layout_height="1px"/>

</RelativeLayout>