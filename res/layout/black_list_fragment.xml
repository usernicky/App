<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ListView
        android:id="@+id/list_black_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="#00000000"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/content_show_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/just_nothing_show_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/no_app_uninstall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/just_nothing_show_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/empty_page_text_m_top"
            android:gravity="center"
            android:text="@string/uninstall_empty_page"
            android:textColor="@color/nothing_show_text"
            android:textSize="@dimen/kongbaiye_text_size" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/ProgressBarCricle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>