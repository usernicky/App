<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp" >

    <FrameLayout
        android:id="@+id/fralay_top"
        android:layout_width="@dimen/hide_album_frame_width"
        android:layout_height="@dimen/hide_album_frame_width"
        android:background="@drawable/folder_bg" >

        <ImageView
            android:id="@+id/video_item_album"
            android:layout_width="@dimen/hide_album_image_frame_width"
            android:layout_height="@dimen/hide_album_image_frame_width"
            android:layout_marginLeft="@dimen/hide_album_image_frame_left"
            android:layout_marginTop="@dimen/hide_album_image_frame_top"
            android:adjustViewBounds="true"
            android:background="@drawable/video_loading"
            android:scaleType="center" />

        <ImageView
            android:layout_width="@dimen/hide_pictrue_imge_frame_width"
            android:layout_height="@dimen/hide_pictrue_imge_frame_width"
            android:layout_marginLeft="@dimen/hide_picture_image_frame_left"
            android:layout_marginTop="@dimen/hide_pictrue_image_frame_top"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_over_frame"
            android:scaleType="center" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/play_icon" />

        <ImageView
            android:id="@+id/iv_cb_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/disguise_icon"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/hide_album_frame_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/fralay_top" >

        <TextView
            android:id="@+id/txt_item_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/grey" />
    </FrameLayout>

</RelativeLayout>