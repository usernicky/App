<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bay_pro_time_m_top">
    <!-- 时间 -->
    <LinearLayout
        android:id="@+id/time_move_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.leo.appmaster.ui.LightTextView
            android:id="@+id/time_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="10:33"
            android:textColor="@color/white"
            android:textSize="46dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/31"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/time_small_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="周四"
                android:textColor="@color/white"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 时间 -->

    <!-- 电池 && 图标 -->
    <LinearLayout
        android:id="@+id/infos_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/time_move_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="invisible">

        <!-- 电池 -->
        <RelativeLayout
            android:id="@+id/battery_icon_content"
            android:layout_width="36dp"
            android:layout_height="56dp"
            android:layout_gravity="center">

            <com.leo.appmaster.ui.WaveView xmlns:wave="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bottle_water"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                wave:bubbleColor="@color/white"
                wave:bubbleNumber="7"
                wave:bubblePeriod="2000" />

            <TextView
                android:id="@+id/battery_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="100%"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:typeface="monospace" />

            <ImageView
                android:id="@+id/iv_battery_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bay_gaoguang" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bay_di" />

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="36dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/battery_bg" />
        </RelativeLayout>
        <!-- 电池 -->

        <!-- 充电文字 -->
        <LinearLayout
            android:id="@+id/hide_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hide_tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/hide_tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="115dp"
                android:text="@string/battery_saver_remain_charge_time"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 充电文字 -->
</RelativeLayout>
