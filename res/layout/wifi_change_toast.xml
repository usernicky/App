<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/loading_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/loding_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/wifi_loding_shape" />

        <ImageView
            android:id="@+id/inner_iv"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="@drawable/wifi_loading_icon" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/wifi_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_radius_btn_shape"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/wifi_result_icon" />

        <TextView
            android:id="@+id/tv_clean_rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_icon"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_clean_rocket"
            android:src="@drawable/wifi_toast_bluearrow" />
    </RelativeLayout>

</RelativeLayout>