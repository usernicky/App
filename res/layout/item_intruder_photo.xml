<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp" >

        <View
            android:id="@+id/v_timebar"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#999999" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/point_timestamp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_timestamp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="37dp" >

            <com.leo.appmaster.intruderprotection.BottomCropImage
                android:id="@+id/btuv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:scaleType="matrix" />

            <RelativeLayout
                android:id="@+id/rl_mask"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#33000000" >

                <ImageView
                    android:id="@+id/iv_intruder_appicon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/tv_intruder_apptimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/iv_intruder_appicon"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_the_last_one_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#999999"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>