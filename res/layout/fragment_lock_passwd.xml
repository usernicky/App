<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_lock_passwd_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<!--         android:layout_above="@+id/tv_passwd_input_tip" -->
    <RelativeLayout
        android:id="@+id/iv_app_icon_layout"
        android:layout_above="@+id/tv_passwd_input_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_marginBottom="@dimen/fragment_password_vertical_space_big" >

        <ImageView
            android:id="@+id/iv_app_icon_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@color/transparent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/fragment_lock_password_appicon_width"
            android:layout_height="@dimen/fragment_lock_password_appicon_height"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_app_icon_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@color/transparent"
            android:visibility="invisible" />
    </RelativeLayout>

<!--         android:layout_above="@+id/tv_passwd_hint"
        android:layout_marginTop="@dimen/fragment_lock_password_passwd_input_tip_margintop" -->
    <TextView
        android:id="@+id/tv_passwd_input_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_passwd_hint"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="@string/passwd_hint"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"
        />
 <!-- android:textSize="@dimen/fragment_lock_password_passwd_input_tip_textsize" -->
<!--         android:layout_above="@+id/layout_passwd" -->
    <TextView
        android:id="@+id/tv_passwd_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/layout_passwd"
        android:ellipsize="marquee"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="@string/passwd_hint_tip"
        android:textColor="#aaffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layout_passwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_lock_password_layout_passwd_height"
        android:layout_above="@+id/key_board"
        android:layout_marginBottom="@dimen/fragment_password_vertical_space_small"
        android:layout_marginTop="@dimen/layout_passwd_marginTop"
        android:gravity="center" >

        <ImageView
            android:id="@+id/tv_passwd_1"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/password_displayed_normal"
            android:gravity="center" />

        <ImageView
            android:id="@+id/tv_passwd_2"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/password_displayed_normal"
            android:gravity="center" />

        <ImageView
            android:id="@+id/tv_passwd_3"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/password_displayed_normal"
            android:gravity="center" />

        <ImageView
            android:id="@+id/tv_passwd_4"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:background="@drawable/password_displayed_normal"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/key_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ad_apace"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/digital_item_marginBottom"
            android:layout_marginTop="@dimen/digital_item_marginTop"
            android:layout_weight="1"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_1_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_1_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:src="@drawable/digital_1_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright" >

                <ImageView
                    android:id="@+id/tv_2_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_2_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_2_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_3_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_3_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_3_normal" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/digital_item_marginBottom"
            android:layout_marginTop="@dimen/digital_item_marginTop"
            android:layout_weight="1"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_4_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_4_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_4_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright" >

                <ImageView
                    android:id="@+id/tv_5_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_5_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_5_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_6_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_6_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_6_normal" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/digital_item_marginBottom"
            android:layout_marginTop="@dimen/digital_item_marginTop"
            android:layout_weight="1"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_7_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_7_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_7_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright" >

                <ImageView
                    android:id="@+id/tv_8_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_8_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_8_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/tv_9_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_9_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_9_normal" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/digital_item_marginBottom"
            android:layout_marginTop="@dimen/digital_item_marginTop"
            android:layout_weight="1"
            android:gravity="center" >

            <View
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="#1effffff"
                android:clickable="true"
                android:gravity="center"
                android:visibility="invisible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" >

                <ImageView
                    android:id="@+id/tv_0_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/digital_bg_normal" />

                <ImageView
                    android:id="@+id/tv_0_top"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:src="@drawable/digital_0_normal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height" >

                <ImageView
                    android:id="@+id/tv_delete_bottom"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/tv_delete"
                    android:layout_width="@dimen/digital_item_width"
                    android:layout_height="@dimen/digital_item_height"
                    android:clickable="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete_button_selecter" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 展开的半屏广告 -->
    <!-- <RelativeLayout 
        android:id="@+id/rl_halfscreenAD2"
        android:layout_height="200dp"
       android:layout_alignParentBottom="true"       
		android:layout_width="match_parent"
		android:background="@color/app_usage_text"     
		android:visibility="gone"   
        >
        <ImageView 
            android:id="@+id/iv_adscaledown"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:background="@drawable/arrow_down_icon"
            />
        
        
    </RelativeLayout> -->
    
    
    <!-- 点击会展开半屏广告的banner -->

    <RelativeLayout
        android:id="@+id/rl_halfSreenBannerAD2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_adicon2"
              android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
           />

        <TextView
            android:id="@+id/tv_appname2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="70dp"
           android:layout_marginTop="6dp"
            android:layout_marginRight="60dp"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tv_appdesc2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="60dp"
            android:layout_below="@id/tv_appname2"
            android:layout_marginLeft="70dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="2"
           
            android:textColor="#333333"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_adopen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/bt_ad_halfscreen_open" />
    </RelativeLayout>

    <!-- 普通banner广告 -->

    <RelativeLayout
        android:layout_margin="7dp"
        android:id="@+id/rl_nomalBannerAD2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone" >

        <ImageView           
            android:id="@+id/iv_adicon"
            android:layout_width="44dp"
            android:layout_height="44dp"
          	android:layout_marginTop="6dp"
          	android:layout_marginBottom="6dp"
          	android:layout_marginLeft="6dp"
          	android:layout_marginRight="6dp"
             />

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="58dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
      		android:gravity="center_vertical"
            android:orientation="horizontal" >
            
            <ImageView
            android:id="@+id/iv_adsign"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ad_sign" />

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="12sp" />    
            
        </LinearLayout>
      
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginRight="120dp"
            android:id="@+id/tv_appdesc"
            android:layout_width="match_parent"
            android:layout_height="28dp"
      		android:layout_alignParentBottom="true"
            android:layout_marginLeft="58dp"
            android:ellipsize="marquee"
            android:gravity="top"
            android:maxLines="2"    		
            android:textColor="#333333"
            android:textSize="10sp" />

        <Button
             android:textColor="@color/white"
            android:background="@drawable/select_bt_halfscreen_install"
            android:id="@+id/iv_ad_app_download"
            android:layout_width="90dp"
            android:textSize="10sp"
            android:layout_height="30dp"
  			 android:clickable="false"
            android:layout_marginRight="23dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
        />

        <ImageView
            android:id="@+id/iv_adclose"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ad_close_small" />
    </RelativeLayout>
    

</RelativeLayout>