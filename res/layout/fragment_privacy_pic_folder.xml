<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="com.leo.appmaster.home.PrivacyNewAppFragment">

    <View
        android:id="@+id/empty_header"
        android:layout_width="1dp"
        android:layout_height="@dimen/pri_pro_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/white" />

    <View
        android:id="@+id/pri_offset_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/white" />

    <com.leo.appmaster.ui.ExpandableGridView
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        ripple:horizontalSpacing="@dimen/pri_new_list_padding"
        ripple:verticalSpacing="@dimen/pri_new_list_padding"
        ripple:columnWidth="109dp"
        ripple:stretchMode="columnWidth"
        android:id="@+id/expand_video_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"
        android:layout_marginTop="@dimen/toolbar_height"
        android:background="@color/transparent"
        android:divider="@null"
        android:numColumns="3"
        android:headerDividersEnabled="false"
        android:overScrollMode="never"
        android:paddingBottom="63dp"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/pic_loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/transparent"
        android:paddingBottom="63dp"
        android:paddingLeft="@dimen/pri_new_list_padding"
        android:paddingRight="@dimen/pri_new_list_padding"
        android:paddingTop="@dimen/pri_new_list_padding">

        <com.leo.appmaster.ui.ImageLoadingView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- 底部操作区域 -->
    <include
        layout="@layout/pri_pro_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true" />

    <include layout="@layout/pri_pro_list_sticky_header"
        android:id="@+id/floating_lable"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pri_pro_new"
        android:layout_marginTop="@dimen/toolbar_height"/>
</RelativeLayout>