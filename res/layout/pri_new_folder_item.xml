<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/pri_pro_cb"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:button="@drawable/check_box_selector"
        android:clickable="true"
        android:padding="5dp" />

    <com.leo.appmaster.ui.RippleView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pri_pro_click_rv"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@id/pri_pro_cb"
        android:paddingLeft="60dp"
        app:rippleAlpha="0.5"
        app:rippleColor="@color/white_list_item_ripple"
        app:rippleDuration="250"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/home_tab_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pri_pro_new_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/c2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/pp_folder_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pri_pro_new_label_tv"
                android:layout_marginTop="7dp"
                android:textColor="@color/cb2"
                android:textSize="@dimen/pri_folder_summary" />
        </RelativeLayout>
    </com.leo.appmaster.ui.RippleView>

    <ImageView
        android:id="@+id/pp_folder_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/c4" />

</RelativeLayout>