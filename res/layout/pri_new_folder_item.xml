<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/pri_pro_cb"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:button="@drawable/check_box_selector"
        android:clickable="true"
        android:padding="5dp" />

    <com.leo.appmaster.ui.RippleView xmlns:leo="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pri_pro_click_rv"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@id/pri_pro_cb"
        android:background="@drawable/home_tab_selector"
        android:paddingLeft="60dp"
        leo:rv_color="@color/white_list_item_ripple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pri_pro_new_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/pri_pro_item_title"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/pp_folder_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/pri_pro_item_summay"
                android:textSize="@dimen/pri_folder_summary" />
        </LinearLayout>


    </com.leo.appmaster.ui.RippleView>

    <ImageView
        android:id="@+id/pp_folder_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_1" />

</RelativeLayout>