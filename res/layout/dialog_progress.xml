<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="95dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/tips"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dlg_pro_hint"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:singleLine="true" >
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/dlg_pro_state"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="17dp"
                android:text="0/0" />

            <ProgressBar
                android:id="@+id/dlg_pro"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/dlg_pro_state"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:progressDrawable="@drawable/progress_bar" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" 
        android:background="@color/item_backup_grey">

        <TextView
            android:id="@+id/dlg_bottom_btn"
            style="@style/dlg_single_button_txt"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>