<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:gravity="center" >

    <TextView
        android:id="@+id/dlg_pro_hint"
        style="@style/dlg_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:paddingTop="20dp"
        android:singleLine="true" >
    </TextView>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_pro_hint"
        android:background="@color/dialog_content_area_bg"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/dlg_pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/dialog_content_area_bg"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:progressDrawable="@drawable/progress_bar" />

        <TextView
            android:id="@+id/dlg_pro_state"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dlg_pro"
            android:layout_marginTop="8dp"
            android:paddingBottom="15dp"
            android:paddingRight="17dp"
            android:text="0/0" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_content"
        android:background="@color/dialog_btn_area_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/dlg_bottom_btn"
            style="@style/dlg_single_button_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>