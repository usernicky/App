<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gamebox_lib_add_app_item_height"
        android:background="@color/gamebox_lib_white">

        <com.leo.game.box.widget.RoundedRectangleNetworkImage
            android:id="@+id/app_image"
            android:layout_width="@dimen/gamebox_lib_add_app_icon_image_width"
            android:layout_height="@dimen/gamebox_lib_add_app_icon_image_width"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gamebox_lib_add_app_icon_image_margin_left"
            android:src="@mipmap/gamebox_lib_default_app_icon" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gamebox_lib_add_app_name_text_margin_left"
            android:layout_toRightOf="@+id/app_image"
            android:maxWidth="@dimen/gamebox_lib_add_app_name_text_maxwidth"
            android:text="appname"
            android:textColor="@color/gamebox_lib_add_app_name_text_textcolor"
            android:textSize="@dimen/gamebox_lib_add_app_name_text_textsize" />

        <TextView
            android:id="@+id/app_menu"
            android:layout_width="@dimen/gamebox_lib_add_app_menu_width"
            android:layout_height="@dimen/gamebox_lib_add_app_menu_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gamebox_lib_add_app_menu_margin_right"
            android:gravity="center"
            android:text="add" />
    </RelativeLayout>

</FrameLayout>