<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_all_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/wei_zhuang_gridview_list_selecter"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <FrameLayout
        android:id="@+id/item_icon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/item_selected"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/disguise_select"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_icon_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:textColor="@color/weisuo_text"
        android:textSize="14dp" />

</LinearLayout>