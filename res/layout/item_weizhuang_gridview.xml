<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_all_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <FrameLayout
        android:id="@+id/item_icon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/select_box_done"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_icon_content"
        android:background="@drawable/app_unselect"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/grey" />

</RelativeLayout>