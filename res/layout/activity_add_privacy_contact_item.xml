<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:paddingLeft="@dimen/activity_privacy_contact_item_paddingLeft" >

    <TextView
        android:id="@+id/add_from_contact_sort_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D5D5"
        android:text="A"
        android:textColor="#E80E35"
        android:visibility="gone" />

    <com.leo.appmaster.privacycontact.CircleImageView
        android:id="@+id/contactIV"
        android:layout_width="@dimen/privacy_contact_icon_size"
        android:layout_height="@dimen/privacy_contact_icon_size"
        android:layout_centerVertical="true"
        android:src="@drawable/default_user_avatar" />

    <RelativeLayout
        android:id="@+id/cantact_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/privacy_call_log_item_calllog_list_message_itemLT_layout_height"
        android:layout_below="@id/add_from_contact_sort_letter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/contactIV" >

        <LinearLayout
            android:id="@+id/contact_itemLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_item_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/contact_item_numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/privacy_contact_list_item_layout_marginTop"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="电话号码"
                android:textColor="#9b9b9b" />
        </LinearLayout>

        <ImageView
            android:id="@+id/contact_item_check_typeIV"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/unselect" >
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/test_list_divider" />
    </RelativeLayout>

</RelativeLayout>