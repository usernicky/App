<com.leo.appmaster.ui.RippleView1 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:gravity="center_vertical"
    app:rippleAlpha="1"
    app:rippleColor="@color/home_tab_pressed"
    app:rippleDuration="250"
    app:rippleHover="true"
    app:rippleInAdapter="true"
    app:rippleOverlay="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_list_selecter">

    <TextView
        android:id="@+id/add_from_contact_sort_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D5D5"
        android:text="A"
        android:textColor="#E80E35"
        android:visibility="gone" />

    <com.leo.appmaster.privacycontact.CircleImageView
        android:id="@+id/contactIV"
        android:layout_width="@dimen/privacy_contact_icon_size"
        android:layout_height="@dimen/privacy_contact_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:src="@drawable/default_user_avatar" />

    <RelativeLayout
        android:id="@+id/cantact_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/privacy_call_log_item_calllog_list_message_itemLT_layout_height"
        android:layout_below="@id/add_from_contact_sort_letter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/contactIV">

        <LinearLayout
            android:id="@+id/contact_itemLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_item_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="理奥网络"
                android:textColor="#333333"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/contact_item_numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/privacy_contact_list_item_layout_marginTop"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2014/09/01"
                android:textColor="#9b9b9b"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/contact_item_check_typeIV"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/unselect"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/cantact_content"
        android:background="@color/c5" />
    </RelativeLayout>
</com.leo.appmaster.ui.RippleView1>