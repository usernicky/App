<com.leo.appmaster.ui.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:background="@drawable/home_tab_selector"
    android:layout_height="68dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/add_from_contact_sort_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D5D5"
        android:text="A"
        android:textColor="#E80E35"
        android:visibility="gone" />

    <com.leo.appmaster.privacycontact.CircleImageView
        android:id="@+id/contactIV"
        android:layout_width="@dimen/privacy_contact_icon_size"
        android:layout_height="@dimen/privacy_contact_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:src="@drawable/default_user_avatar" />

    <RelativeLayout
        android:id="@+id/cantact_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/privacy_call_log_item_calllog_list_message_itemLT_layout_height"
        android:layout_below="@id/add_from_contact_sort_letter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/contactIV" >

        <LinearLayout
            android:id="@+id/contact_itemLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_item_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="理奥网络"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/contact_item_numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/privacy_contact_list_item_layout_marginTop"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2014/09/01"
                android:textSize="13dp"
                android:textColor="#9b9b9b" />
        </LinearLayout>

        <ImageView
            android:id="@+id/contact_item_check_typeIV"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/unselect" >
        </ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/cantact_content"
        android:background="@color/c5" />
</com.leo.appmaster.ui.RippleView>