<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/appwallTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_background" >
    </com.leo.appmaster.ui.CommonTitleBar>

    <ListView
        android:id="@+id/appwallLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appwallTB"
        android:background="@color/white"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:fadingEdge="horizontal"
        android:listSelector="@null"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:visibility="gone" >
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mode_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_wall_network"
            android:visibility="gone" />

        <Button
            android:id="@+id/restartBT"
            style="@style/dlg_single_button_txt_ok"
            android:layout_below="@id/mode_name_tv"
            android:layout_marginTop="20dp"
            android:text="@string/app_wall_click"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>