<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
    
    <com.leo.appmaster.ui.CommonTitleBar 
        android:id="@+id/appwallTB"
        android:layout_width="match_parent"
        android:background="@color/app_background"
        android:layout_height="wrap_content" >
    </com.leo.appmaster.ui.CommonTitleBar>
     
    <ListView 
        android:id="@+id/appwallLV"
       	android:layout_below="@+id/appwallTB"
       	android:layout_width="match_parent"
       	android:layout_height="match_parent" 
        android:background="@color/white" 
        android:divider="@null"
        android:dividerHeight="1dp"
        android:listSelector="@null"
        android:scrollbarStyle="outsideOverlay"    
        android:scrollbars="none"
        android:visibility="gone"
        android:fadingEdge="horizontal">    
    </ListView>

    <Button
        android:id="@+id/restartBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appwallTB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="点击重试" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restartBT"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:visibility="gone"
        android:text="网络或服务器异常请重新尝试！" />
  
</RelativeLayout>
