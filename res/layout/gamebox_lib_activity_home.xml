<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamebox_lib_home_container_background"
    android:paddingBottom="@dimen/gamebox_lib_home_padding_bottom"
    android:paddingLeft="@dimen/gamebox_lib_home_padding_left"
    android:paddingRight="@dimen/gamebox_lib_home_padding_right"
    android:paddingTop="@dimen/gamebox_lib_home_padding_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gamebox_lib_home_background">

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gamebox_lib_home_app_title_container_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/ganmebox_lib_home_title_container_background">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/gamebox_lib_home_app_name_margin_left"
                android:text="@string/gamebox_lib_app_name"
                android:textColor="@color/gamebox_lib_white"
                android:textSize="@dimen/gamebox_lib_home_app_name_textsize" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/memory_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gamebox_lib_home_memory_container_height"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/gamebox_home_memory_bottom_bakground">

            <RelativeLayout
                android:id="@+id/memory_opimize_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/gamebox_lib_home_memory_opimize_container_margin_bottom"
                android:layout_marginRight="@dimen/gamebox_lib_home_memory_opimize_container_margin_right"
                android:layout_marginTop="@dimen/gamebox_lib_home_memory_opimize_container_margin_top"
                android:background="@drawable/gamebox_lib_home_memory_container_background">

                <ImageView
                    android:id="@+id/memory_opimize_image"
                    android:layout_width="@dimen/gamebox_lib_home_memory_opimize_image_width"
                    android:layout_height="@dimen/gamebox_lib_home_memory_opimize_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/gamebox_lib_home_memory_opimize_image_margin_left"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gamebox_lib_home_memory_rocket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:minWidth="@dimen/gamebox_lib_home_memory_opimize_text_min_widht"
                    android:layout_marginLeft="@dimen/gamebox_lib_home_memory_opimize_text_margin_left"
                    android:layout_marginRight="@dimen/gamebox_lib_home_memory_opimize_text_margin_right"
                    android:layout_toRightOf="@+id/memory_opimize_image"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxWidth="@dimen/gamebox_lib_home_memory_opimize_text_max_widht"
                    android:text="@string/gamebox_lib_home_btn_boost"
                    android:textColor="@color/gamebox_lib_home_memory_opimize_textcolor"
                    android:textSize="@dimen/gamebox_lib_home_memory_opimize_text_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/memory_opimize_container">
                <RelativeLayout
                    android:id="@+id/memory_used_percent_container"
                    android:layout_width="@dimen/gamebox_lib_home_memory_available_percent_container_width"
                    android:layout_height="@dimen/gamebox_lib_home_memory_available_percent_container_width"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/gamebox_lib_home_memory_available_percent_container_margin_left">

                    <com.leo.game.box.widget.RoundProgressBar
                        android:id="@+id/memory_used_percent_progress"
                        android:layout_width="@dimen/gamebox_lib_home_memory_available_percent_container_width"
                        android:layout_height="@dimen/gamebox_lib_home_memory_available_percent_container_width"
                        android:layout_centerHorizontal="true"
                        app:gamebox_lib_maxProgress="100"
                        app:gamebox_lib_pointColor="@color/gamebox_lib_transparent"
                        app:gamebox_lib_pointRadius="0dp"
                        app:gamebox_lib_roundColor="@color/gamebox_lib_home_memory_used_percent_progress_roundcolor"
                        app:gamebox_lib_roundProgressColor="@color/gamebox_lib_home_memory_used_percent_progress_roundprogresscolor"
                        app:gamebox_lib_roundWidth="@dimen/gamebox_lib_home_memory_available_percent_cicle_round_width"
                        app:gamebox_lib_textIsDisplayable="false" />


                    <TextView
                        android:id="@+id/memory_used_percent_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="65"
                        android:textColor="@color/gamebox_lib_main_color"
                        android:textSize="@dimen/gamebox_lib_home_memory_available_percent_number_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/memory_used_percent_number"
                        android:layout_alignBottom="@+id/memory_used_percent_number"
                        android:layout_toRightOf="@+id/memory_used_percent_number"
                        android:text="%"
                        android:textColor="@color/gamebox_lib_main_color"
                        android:textSize="@dimen/gamebox_lib_home_memory_available_percent_number_postfix_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/memory_available_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/gamebox_lib_home_memory_container_margin_left"
                    android:layout_toRightOf="@+id/memory_used_percent_container">

                    <TextView
                        android:id="@+id/memory_available_title_txt"
                        android:layout_width="@dimen/gamebox_lib_memory_available_title_txt_maxwidth"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/gamebox_lib_home_memory_available_title_margin_bottom"
                        android:maxLines="2"
                        android:maxWidth="@dimen/gamebox_lib_memory_available_title_txt_maxwidth"
                        android:text="@string/gamebox_lib_home_available_memory_title"
                        android:textColor="@color/gamebox_lib_main_textcolor"
                        android:textSize="@dimen/gamebox_lib_home_memory_available_title_textsize" />

                    <TextView
                        android:id="@+id/memory_available_number_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/memory_available_title_txt"
                        android:layout_below="@+id/memory_available_title_txt"
                        android:text="999.9"
                        android:singleLine="true"
                        android:textColor="@color/gamebox_lib_main_color"
                        android:textSize="@dimen/gamebox_lib_home_memory_available_textsize" />

                    <TextView
                        android:id="@+id/memory_unit_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/memory_available_number_txt"
                        android:layout_alignBottom="@+id/memory_available_number_txt"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/memory_available_number_txt"
                        android:text="MB"
                        android:textColor="@color/gamebox_lib_main_textcolor"
                        android:textSize="@dimen/gamebox_lib_home_memory_available_unit_textsize" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/app_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/memory_container"
            android:layout_below="@+id/title_container">

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gamebox_lib_divider_height"
            android:layout_below="@+id/app_container"
            android:background="@color/gamebox_lib_divider_color"></View>
    </RelativeLayout>


</FrameLayout>