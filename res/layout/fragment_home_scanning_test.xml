                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:id="@+id/scan_new_wifi">

                    <ImageView
                        android:id="@+id/scan_new_wifi_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:visibility="invisible"/>

                    <com.leo.appmaster.ui.LoadingView
                        android:id="@+id/scan_new_wifi_loading"
                        android:layout_marginTop="30dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scan_new_contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp"
                android:background="@color/white"
                android:layout_below="@+id/scan_new_wifi_layout"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="14dp">

                    <View
                        android:id="@+id/scan_new_contact_top_line"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/c4"/>

                    <ImageView
                        android:id="@+id/scan_new_contact_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_below="@+id/scan_new_contact_top_line"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/contact_scan" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginTop="34dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scan_new_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/c2"
                        android:textSize="@dimen/f3"
                        android:text="@string/scan_contact_title"/>

                    <TextView
                        android:id="@+id/scan_new_contact_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:textColor="@color/c4"
                        android:layout_marginTop="6dp"
                        android:textSize="@dimen/f4"/>

                    <TextView
                        android:id="@+id/scan_new_contact_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/cb2"
                        android:drawableLeft="@drawable/tip_scan"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/f4"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:id="@+id/scan_new_contact">

                    <ImageView
                        android:id="@+id/scan_new_contact_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:visibility="invisible"/>

                    <com.leo.appmaster.ui.LoadingView
                        android:id="@+id/scan_new_contact_loading"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#48000000"/>

        <com.leo.appmaster.ui.MaterialRippleLayout
            android:id="@+id/scan_cancel_rv"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/green_radius_btn_shape"
            leo:rippleColor="@color/white_list_item_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <TextView
                android:id="@+id/scan_cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/pri_pro_cancel"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </com.leo.appmaster.ui.MaterialRippleLayout>

        <com.leo.appmaster.ui.MaterialRippleLayout
            android:id="@+id/scan_process_rv"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            leo:rippleOverlay="true"
            android:background="@drawable/green_radius_btn_shape"
            leo:rippleColor="@color/green_button_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true">

            <TextView
                android:id="@+id/scan_process_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/pri_pro_process"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </com.leo.appmaster.ui.MaterialRippleLayout>
    </RelativeLayout>
</RelativeLayout>