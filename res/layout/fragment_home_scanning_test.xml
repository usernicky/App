<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/transparent">

    <TextView
        android:id="@+id/scan_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="@string/pri_pro_scanning"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/scan_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_title_tv"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/scan_title_tv"
        android:layout_marginRight="50dp"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:text="@string/scanning_pattern"
        android:textColor="@color/scanning_sub_title"
        android:textSize="14dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:paddingBottom="55dp"
        android:background="@color/transparent"
        android:divider="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
