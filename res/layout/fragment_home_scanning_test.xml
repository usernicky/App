<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/scan_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/scan_title_margin_right"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/pri_pro_scanning"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/scan_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/scan_title_tv"
            android:layout_alignParentRight="true"
            android:layout_below="@id/scan_title_tv"
            android:layout_marginRight="@dimen/scan_title_margin_right"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/scanning_pattern"
            android:textColor="@color/scanning_sub_title"
            android:textSize="14dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:background="@color/transparent"
        android:divider="#00000000"
        android:overScrollMode="never"
        android:paddingBottom="55dp"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/scrollView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <View
                android:id="@+id/empty_header"
                android:layout_width="1dp"
                android:layout_height="144dp" />

            <View
                android:id="@+id/back_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/empty_header"
                android:background="@color/white" />

            <!-- Advertise -->
            <include
                android:id="@+id/ad_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp"
                layout="@layout/scan_ad_layout" />
            <!-- Advertise -->


            <include
                android:id="@+id/scan_new_app_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_app_layout" />

            <include
                android:id="@+id/scan_new_pic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_pic_layout" />

            <include
                android:id="@+id/scan_new_vid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_vid_layout" />


            <include
                android:id="@+id/scan_new_lost_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_lost_layout" />

            <include
                android:id="@+id/scan_new_instruct_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_instruct_layout" />


            <include
                android:id="@+id/scan_new_wifi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_wifi_layout" />

            <include
                android:id="@+id/scan_new_contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_header"
                layout="@layout/scan_contact_layout" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#48000000" />

        <com.leo.appmaster.ui.MaterialRippleLayout
            android:id="@+id/scan_cancel_rv"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/green_radius_btn_shape"
            leo:rippleColor="@color/white_list_item_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <TextView
                android:id="@+id/scan_cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/pri_pro_cancel"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </com.leo.appmaster.ui.MaterialRippleLayout>

        <com.leo.appmaster.ui.MaterialRippleLayout
            android:id="@+id/scan_process_rv"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/green_radius_btn_shape"
            android:visibility="gone"
            leo:rippleColor="@color/green_button_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <TextView
                android:id="@+id/scan_process_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/pri_pro_process"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </com.leo.appmaster.ui.MaterialRippleLayout>
    </RelativeLayout>
</RelativeLayout>