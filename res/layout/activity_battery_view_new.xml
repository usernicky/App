<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.leo.appmaster.ui.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:rippleColor="@color/menu_ripple"
        app:rippleDuration="150"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <RelativeLayout
            android:id="@+id/ct_option_2_rl"
            style="@style/ToolbarIcon">

            <ImageView
                android:id="@+id/ct_option_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/setup_icon" />
        </RelativeLayout>
    </com.leo.appmaster.ui.MaterialRippleLayout>

    <RelativeLayout
        android:id="@+id/time_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <!-- 时间 -->
        <RelativeLayout
            android:id="@+id/time_move_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/time_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="10:33"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_big"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/time_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/31"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/time_small_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/time_small"
                    android:text="周四"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 时间 -->

        <!-- 电池 && 图标 -->
        <RelativeLayout
            android:id="@+id/infos_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/time_move_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <!-- 电池 -->
            <RelativeLayout
                android:id="@+id/battery_icon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.leo.appmaster.ui.WaveView xmlns:wave="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bottle_water"
                    android:layout_width="62dp"
                    android:layout_height="95dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    wave:bubbleColor="@color/white"
                    wave:bubbleNumber="7"
                    wave:bubblePeriod="2000" />

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="66dp"
                    android:layout_height="100dp"
                    android:background="@drawable/battery_bg" />

                <TextView
                    android:id="@+id/battery_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="100%"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
            </RelativeLayout>

            <!-- 图标1 -->
            <RelativeLayout
                android:id="@+id/battery_icon_flag"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/battery_icon_content">

                <!-- 绿色箭头 -->
                <ImageView
                    android:id="@+id/little_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/greenarrow" />

                <!-- 右部分 -->
                <RelativeLayout
                    android:id="@+id/show_icon_content"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/transparent">

                    <RelativeLayout
                        android:id="@+id/trickle_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/iv_trickle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bay_trickle" />

                        <TextView
                            android:id="@+id/tv_trickle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/iv_trickle"
                            android:text="@string/screen_protect_type_three"
                            android:textColor="@color/c1"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/continuous_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/iv_continuous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bay_continuous" />

                        <TextView
                            android:id="@+id/tv_continuous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/iv_continuous"
                            android:text="@string/screen_protect_type_two"
                            android:textColor="@color/c1"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/speed_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <ImageView
                            android:id="@+id/iv_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bay_speed" />

                        <TextView
                            android:id="@+id/tv_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@id/iv_speed"
                            android:text="@string/screen_protect_type_one"
                            android:textColor="@color/c1"
                            android:textSize="13sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
            <!-- 图标1 -->

            <!-- 图标2 -->
            <RelativeLayout
                android:id="@+id/hide_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/battery_icon_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hide_tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/hide_tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hide_tv_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/screen_protect_time"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </RelativeLayout>

        </RelativeLayout>
        <!-- 电池 && 图标 -->

    </RelativeLayout>


    <!-- 剩余时间 -->
    <RelativeLayout
        android:id="@+id/remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/screen_protect_time"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/left_time"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>
    <!-- 剩余时间 -->


    <!-- 滑动区域 -->

    <RelativeLayout
        android:id="@+id/move_boss"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_above="@id/slider"
        android:background="@color/transparent">

        <com.leo.appmaster.battery.BatteryTestViewLayout
            android:id="@+id/slide_content"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <RelativeLayout
                android:id="@+id/move_arrow"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/iv_move_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bay_arrow_up" />

            </RelativeLayout>

            <com.leo.appmaster.battery.SelfScrollView
                android:id="@+id/slide_content_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/move_arrow"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#7FFFFFFF"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:paddingBottom="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Advertise -->
                    <include
                        android:id="@+id/ad_content"
                        layout="@layout/scan_ad_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp" />
                    <!-- Advertise -->

                    <!-- 推广位1 -->
                    <ViewStub
                        android:id="@+id/content_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ad_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:layout="@layout/pri_confirm_swifty_item" />

                    <!-- 推广位2 -->
                    <ViewStub
                        android:id="@+id/content_type_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/content_type_1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:layout="@layout/pri_confirm_swifty_item" />


                </LinearLayout>
            </com.leo.appmaster.battery.SelfScrollView>
        </com.leo.appmaster.battery.BatteryTestViewLayout>
    </RelativeLayout>
    <!-- 滑动区域 -->


    <!-- 滑动解锁 -->
    <com.leo.appmaster.battery.BatteryProtectSlideView xmlns:slider="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        slider:maskText=">> 滑动来解锁"
        slider:maskTextMarginLeft="1dp"
        slider:maskTextMarginTop="15dp"
        slider:maskTextSize="20sp"
        slider:slidableLength="208dp" />
    <!-- 滑动解锁 -->

</RelativeLayout>