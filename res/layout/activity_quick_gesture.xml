<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quick_gesture_switch_setting_show_color" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_quick_gesture_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />

    <ListView
        android:id="@+id/quick_gesture_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_quick_gesture_title_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg"
        android:divider="@null"
        android:listSelector="@drawable/manager_backup_list_selecter"
        android:scrollbars="none" />

    <com.leo.appmaster.quickgestures.view.QuickGesturesAreaView
        android:id="@+id/quick_gesture_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone" >
    </com.leo.appmaster.quickgestures.view.QuickGesturesAreaView>

    <RelativeLayout
        android:id="@+id/miui_tipRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/quick_gesture_miui_tip_color"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/pg_appmanager_quick_gesture_miui_open_float_window_tip_text"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/quick_sliding_left_area"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#6e000000" />

        <ImageView
            android:id="@+id/quick_sliding_right_area"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#6e000000" />
    </RelativeLayout>

</RelativeLayout>