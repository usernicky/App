<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quick_gesture_switch_setting_show_color" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_quick_gesture_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />

    <ListView
        android:id="@+id/quick_gesture_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_quick_gesture_title_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg"
        android:divider="@null"
        android:listSelector="@drawable/manager_backup_list_selecter"
        android:scrollbars="none" />

    <com.leo.appmaster.quickgestures.view.QuickGesturesAreaView
        android:id="@+id/quick_gesture_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone" >
    </com.leo.appmaster.quickgestures.view.QuickGesturesAreaView>

</RelativeLayout>