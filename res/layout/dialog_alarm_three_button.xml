<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="274dp"
        android:minHeight="95dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/tips"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="60dp"
            android:paddingBottom="14dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="14dp" >

            <ImageView
                android:id="@+id/dlg_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/dlg_icon_fail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dlg_content"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dlg_left_icon"
                android:text="content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:background="@color/item_backup_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/dlg_left_btn"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/dlg_right_button_selector"
            android:gravity="center"
            android:text="@string/lock"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dlg_mid_btn"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/dlg_right_button_selector"
            android:gravity="center"
            android:text="@string/lock_more"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dlg_right_btn"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/dlg_left_button_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>