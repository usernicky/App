<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >


            <TextView
                android:id="@+id/dlag_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/privacy_contact_popumenus_add_new_privacy_contact"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/call_log_item_top_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_line" />

            <LinearLayout
                android:id="@+id/dlg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                     android:id="@+id/dlg_add_sms"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:gravity="center"
                    android:background="@drawable/manager_backup_list_selecter"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/sms_record_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_contact_popumenus_from_message"
                        android:textColor="#a3a3a3"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/call_log_item_top_bottom_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_line" />

                <LinearLayout
                    android:id="@+id/dlg_add_call"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/manager_backup_list_selecter">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/call_records_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/manager_backup_list_selecter"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_contact_popumenus_from_call_log"
                        android:textColor="#a3a3a3"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dlag_title"
                    android:background="@drawable/contact_line" />

                <LinearLayout
                     android:id="@+id/dlg_add_contact"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/manager_backup_list_selecter" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/contacts_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/manager_backup_list_selecter"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_contact_popumenus_from_contact"
                        android:textColor="#a3a3a3"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dlag_title"
                    android:background="@drawable/contact_line" />

                <LinearLayout
                    android:id="@+id/dlg_add_input"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/manager_backup_list_selecter" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/input_number_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/manager_backup_list_selecter"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_contact_popumenus_input_phone_number"
                        android:textColor="#a3a3a3"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>