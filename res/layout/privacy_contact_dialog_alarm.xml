<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.leo.appmaster.privacycontact.CircleImageView
            android:id="@+id/contactIV"
            android:layout_width="@dimen/privacy_contact_detailcontact_icon_size"
            android:layout_height="@dimen/privacy_contact_detailcontact_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/default_user_avatar" />

        <LinearLayout
            android:id="@+id/dlg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactIV"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_toRightOf="@id/contactIV"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dlg_content_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="联系人姓名"
                android:textColor="#414141"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dlg_content_answer_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="联系人电话"
                android:textColor="#9b9b9b"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dlg_title_delete"
                android:layout_width="@dimen/privacy_contact_dialog_button_width"
                android:layout_height="@dimen/privacy_contact_dialog_button_height"
                android:layout_marginRight="@dimen/privacy_contact_dialog_restore_layout_marginRight"
                android:src="@drawable/delete_icon" />

            <ImageView
                android:id="@+id/dlg_title_edit"
                android:layout_width="@dimen/privacy_contact_dialog_button_width"
                android:layout_height="@dimen/privacy_contact_dialog_button_height"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_btn" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/privacy_contact_detail_texts_btn_selecter"
            android:gravity="center"
            android:text="@string/privacy_contact_dialog_texts"
            android:textColor="@drawable/privacy_contact_dialog_texts_color_selecter"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent" >
        </ImageView>

        <TextView
            android:id="@+id/dlg_right_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/privacy_contact_detail_call_btn_selecter"
            android:gravity="center"
            android:text="@string/privacy_caontact_dialog_call"
            android:textColor="@drawable/privacy_contact_dialog_call_color_selecter"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>