<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lock_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/help_setting_tip"
    android:clipChildren="false"
    android:gravity="center"
    android:layerType="software" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_background" />

    <com.leo.appmaster.ui.LeoPictureViewPager
        android:id="@+id/help_setting"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title_bar"
        android:layout_marginTop="@dimen/help_setting_margintop"
        android:background="@color/help_setting_tip"
        android:layout_centerInParent="true"
        android:clipChildren="false">
    </com.leo.appmaster.ui.LeoPictureViewPager>

</RelativeLayout>