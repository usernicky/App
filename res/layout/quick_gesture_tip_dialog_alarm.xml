<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/first_tip_up"
        android:layout_width="@dimen/quick_first_tip_dialog_width"
        android:layout_height="@dimen/quick_first_tip_dialog_height"
        android:background="@drawable/dialog_gesture_bg_up" />

    <LinearLayout
        android:id="@+id/quick_dlag_rt"
        android:layout_width="@dimen/quick_first_tip_dialog_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_tip_up"
        android:layout_gravity="center"
        android:background="@drawable/bg_zeroround"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/quick_dlg_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/quick_dlg_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/quick_first_tip_dialog_title_margin_top"
                android:gravity="center"
                android:text="@string/pg_appmanager_quick_gesture_name"
                android:textColor="#666666"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/quick_dlg_icon"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/dialog_gesture_phone" />
            <!--
     android:layout_width="@dimen/quick_first_tip_dialog_content_phone_width"
                android:layout_height="@dimen/quick_first_tip_dialog_content_phone_height"
            -->

            <TextView
                android:id="@+id/quick_dlg_title"
                style="@style/dlg_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/tips"
                android:visibility="gone" />

            <TextView
                android:id="@+id/quick_dlg_content"
                style="@style/dlg_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/quick_first_tip_dialog_content_margin_top"
                android:layout_marginTop="@dimen/quick_first_tip_dialog_content_margin_top"
                android:ellipsize="end"
                android:maxLines="6"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/first_open_quick_gesture_dialog_tip_cotent"
                android:textColor="#848484"
                android:textSize="@dimen/quick_first_tip_dialog_content_text_size" />
           
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quick_dlg_2btn_layout"
        android:layout_width="@dimen/quick_first_tip_dialog_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/quick_dlag_rt"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quick_dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/quick_first_tip_dialog_left_bt" />

        <TextView
            android:id="@+id/quick_dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/quick_first_tip_dialog_right_bt" />
    </LinearLayout>

</RelativeLayout>