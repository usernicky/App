<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
   
    <com.leo.appmaster.ui.CommonTitleBar 
        android:id="@+id/appwallTB"
        android:layout_width="match_parent"
        android:background="@color/app_background"
        android:layout_height="wrap_content" >
    </com.leo.appmaster.ui.CommonTitleBar>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbarStyle="insideInset"
        android:layout_below="@+id/appwallTB"
         >
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
           <TextView 
            android:id="@+id/protocolTilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"     
            android:textSize="20dp"       
            android:layout_gravity="center_horizontal"
            android:text="@string/protocolTitl"
            />     
        <TextView 
            android:id="@+id/protocolTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="@string/protocol"
            />      
            <TextView 
                android:id="@+id/protocolSupportTV"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:text="@string/protocolSupport"
               	android:layout_marginTop="5dp"
               	android:textColor="@color/blue"
               	android:autoLink="email"
               	android:layout_marginBottom="100dp"           
                />
             </LinearLayout>
    </ScrollView>
  
</RelativeLayout>
