<com.leo.appmaster.ui.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleAlpha="1"
    app:rippleColor="@color/home_tab_pressed"
    app:rippleDelayClick="false"
    app:rippleDuration="300"
    app:rippleHover="true"
    app:rippleInAdapter="true"
    app:rippleOverlay="false">
    <com.leo.appmaster.applocker.ListLockItem
        android:id="@+id/content_item_all"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/new_list_selecter">

        <ImageView
            android:id="@+id/lock_app_icon"
            android:layout_width="@dimen/app_manager_lv_item_icon_width_height"
            android:layout_height="@dimen/app_manager_lv_item_icon_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/lock_content_name_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/lock_app_check"
            android:layout_toRightOf="@id/lock_app_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lock_app_title"
                android:layout_width="@dimen/app_manager_backup_item_text_width"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/cool_black"
                android:textSize="@dimen/applock_text_title_size" />

            <TextView
                android:id="@+id/lock_app_nums"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/divider_1"
                android:textSize="@dimen/applock_text_desc_size" />
        </LinearLayout>


        <ImageView
            android:id="@+id/lock_app_check"
            android:layout_width="19dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp" />
        <View style="@style/priAppItem" />
    </com.leo.appmaster.applocker.ListLockItem>
</com.leo.appmaster.ui.MaterialRippleLayout>
