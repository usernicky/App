    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/top_area"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_fail_times_to_catch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/intruder_to_catch_fail_times_tip"
            android:textColor="#999999"
            android:textSize="15dp" />

        <com.leo.appmaster.ui.RippleView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rv_change_times"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minWidth="52dp"
            android:maxWidth="90dp"
            android:layout_marginRight="12dp"
            app:rv_alpha="255"
            app:rv_color="@color/button_blue_stroke_ripple" >

            <Button
                android:minWidth="52dp"
           	 android:maxWidth="90dp"
                android:id="@+id/bt_change_times"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/while_bg_blue_line"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/change_times_to_catch"
                android:textColor="#2674f6"
                android:textSize="14dp" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#999999" />

