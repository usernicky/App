<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background_color" >

         <TextView 
             android:layout_toLeftOf="@+id/rl_switch"
                  android:textColor="#ffffff"
                  android:gravity="right"
                  android:textSize="15dp"
                  android:layout_marginRight="8dp"
                android:layout_width="25dp"
                android:layout_marginTop="55dp"
                android:layout_height="20dp"
                android:text="off"
                />
         
          <TextView 
              android:gravity="left"
               android:textSize="15dp"
                  android:layout_marginLeft="8dp"
             android:layout_toRightOf="@+id/rl_switch"
                  android:textColor="#ffffff"
                android:layout_width="25dp"
                android:layout_marginTop="55dp"
                android:layout_height="20dp"
                android:text="on"
                />
        
         <!-- 开关跟布局 -->
        <RelativeLayout              
            android:id="@+id/rl_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >
            
            
            <RelativeLayout
                android:id="@+id/rl_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            >
                <ImageView
                    android:id="@+id/iv_switch_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp" 
                    android:src="@drawable/intruder_catch_switch_bg" />
                
                <ImageView
                    android:id="@+id/iv_redlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/intruder_catch_switch_grey" />

            <ImageView
                 android:id="@+id/iv_greenlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="140dp"
                android:src="@drawable/intruder_catch_switch_grey" />
            
            </RelativeLayout>
            
            <ImageView
                    android:id="@+id/iv_switch_needle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/intruder_catch_switch_needle" />
            
            <ImageView
                android:id="@+id/iv_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/intruder_catch_switch_button" />
            

