<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="2dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:id="@+id/image_FT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/theft_alert" />

        <ImageView
            android:id="@+id/image_tip_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right"
            android:src="@drawable/wifi_error"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/rip_btn"
        android:layout_toRightOf="@id/image_FT"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/phone_security_instruct_onkey"
            android:textColor="#333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="true"
            android:text="@string/phone_security_instruct_onkey_description"
            android:textColor="#999999"
            android:textSize="12dp" />
    </LinearLayout>

    <com.leo.appmaster.ui.RippleView
        android:id="@+id/rip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:rv_rippleDuration="100">

        <Button
            android:id="@+id/sec_add_number_BT"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="@drawable/green_btn_selector"
            android:gravity="center"
            android:maxWidth="90dp"
            android:minWidth="58dp"
            android:text="@string/secur_instr_open_bt"
            android:textColor="#15c937"
            android:textSize="14dp"

            />
    </com.leo.appmaster.ui.RippleView>
</RelativeLayout>
