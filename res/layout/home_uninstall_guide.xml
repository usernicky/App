<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/uninstall_guide"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="gone">

<!--    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/uninstall_guide_bg"/>-->


    <RelativeLayout
        android:id="@+id/light_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/light_view"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@+id/empty_view"
            android:background="@color/transparent"/>

        <View
            android:id="@+id/right_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/empty_view"
            android:background="@color/uninstall_guide_bg"
            android:layout_toRightOf="@+id/light_view"/>

        <View
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/uninstall_guide_bg"/>

        <ImageView
            android:id="@+id/tips_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uninstall_tips_hand"
            android:layout_above="@+id/light_view"
            android:layout_marginBottom="-15dp"
            android:layout_marginLeft="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tips_hand"
            android:layout_above="@+id/light_view"
            android:text="@string/uninstall_guide_tips"
            android:textSize="@dimen/f4"
            android:textColor="#FFDA2E"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/uninstall_guide_bg"/>


</LinearLayout>