<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grade_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wifi_result_1px_bg"
    android:padding="19dp">

    <RelativeLayout
        android:id="@+id/grade_result_top_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/grade_blue_tiao"
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@color/wifi_result_blue" />

        <TextView
            android:id="@+id/grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/grade_blue_tiao"
            android:text="@string/grade_item_title"
            android:textColor="@color/c2"
            android:textSize="15dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/grade_small_black_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/grade_result_top_content"
        android:layout_marginTop="5dp"
        android:background="@color/c5" />



    <ImageView
        android:id="@+id/grade_img"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_below="@id/grade_small_black_line"
        android:layout_marginTop="19dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grade_bg"/>

    <com.leo.appmaster.ui.FiveStarsLayout
        android:id="@+id/fsl_fivestars"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_below="@id/grade_small_black_line"
        android:layout_marginTop="19dp"/>

    <TextView
        android:id="@+id/grade_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/c2"
        android:textSize="14dp"
        android:layout_below="@+id/grade_img"
        android:text="@string/dialog_fivestars_content_text"/>

    <com.leo.appmaster.ui.RippleView
        android:id="@+id/grade_resulte_sure"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/grade_txt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_radius_btn_shape"
        android:clickable="true"
        ripple:rippleColor="@color/green_button_ripple"
        ripple:rippleDuration="250"
        ripple:rippleHover="true"
        ripple:rippleOverlay="true">

        <TextView
            android:id="@+id/grade_result_sure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/grade_item_btn"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </com.leo.appmaster.ui.RippleView>
</RelativeLayout>