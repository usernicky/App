<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@drawable/dialog_bg" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mode_name"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_first_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:text="@string/please_input_mode_name"
                android:textColor="#585858" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/input_box_line"
                android:ems="10"
                android:singleLine="true"
                android:textColor="#dd1f1f1f"
                android:textCursorDrawable="@null" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:gravity="center"
        android:orientation="horizontal"
         android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent" >
        </ImageView>

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</RelativeLayout>