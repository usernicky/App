<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_background" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_bar_option_selector"
            android:padding="16dp"
            android:src="@drawable/back_btn_menu" />

        <TextView
            android:id="@+id/mode_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:ellipsize="end"
            android:maxWidth="@dimen/mode_name_max_width"
            android:singleLine="true"
            android:text="lock mode"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_edit_mode_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mode_name_tv"
            android:padding="14dp"
            android:src="@drawable/edit_mode_name" />

        <ImageView
            android:id="@+id/iv_edit_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:background="@drawable/title_bar_option_selector"
            android:src="@drawable/mode_done" />
    </RelativeLayout>

    <com.leo.appmaster.ui.PagedGridView
        android:id="@+id/pager_unlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar"
        android:background="#f3f3f3"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

</RelativeLayout>