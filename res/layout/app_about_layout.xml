<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_background" >

        <com.leo.appmaster.ui.CommonTitleBar
            android:id="@+id/about_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/app_background" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="@dimen/about_logo_width"
            android:layout_height="@dimen/about_logo_height"
            android:layout_below="@+id/about_title_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/about_icon_margin_top"
            android:scaleType="fitCenter"
            android:src="@drawable/splash_icon" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:text="1.00"
            android:textColor="#FFABCEFF"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/app_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/splash_name" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/about_copy"
            android:textColor="#FFABCEFF"
            android:textSize="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_bottom_height"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/join_beta"
                android:layout_width="289dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="@drawable/mycheck_button_selecter"
                android:text="@string/about_group"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/like_us"
                android:layout_width="289dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="@drawable/mycheck_button_selecter"
                android:text="@string/about_praise"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/check_update_button"
                android:layout_width="289dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="@drawable/mycheck_button_selecter"
                android:text="@string/protocolBar"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>