<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/privacy_call_log_item_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/privacy_call_log_item_title_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_privacy_contact_item_paddingTop" >

        <RelativeLayout
            android:id="@+id/call_log_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_privacy_contact_item_paddingLeft" >

            <com.leo.appmaster.privacycontact.CircleImageView
                android:id="@+id/contactIV"
                android:layout_width="@dimen/privacy_contact_icon_size"
                android:layout_height="@dimen/privacy_contact_icon_size"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user_avatar" />

            <RelativeLayout
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/contactIV" >

                <LinearLayout
                    android:id="@+id/add_from_call_log_itemLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/calllog_item_sendmessage"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/add_from_call_log_item_nameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="理奥网络"
                        android:textColor="#414141"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/add_from_call_log_item_dateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_from_call_log_item_nameTV"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2014/09/01"
                        android:textColor="#9b9b9b"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_from_call_log_item_contentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/add_from_call_log_itemLT"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/calllog_item_call"
                    android:layout_width="@dimen/privacy_call_log_item_calllog_item_sendmessage_layout_width"
                    android:layout_height="@dimen/privacy_call_log_item_calllog_item_sendmessage_layout_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/privacy_call_log_item_calllog_item_scalllog_item_calllog_item_call_layout_marginRight"
                    android:src="@drawable/privacy_call_log_item_call_bt_selecter" >
                </ImageView>

                <ImageView
                    android:id="@+id/calllog_item_sendmessage"
                    android:layout_width="@dimen/privacy_call_log_item_calllog_item_sendmessage_layout_width"
                    android:layout_height="@dimen/privacy_call_log_item_calllog_item_sendmessage_layout_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/privacy_call_log_item_calllog_item_scalllog_item_sendmessage_layout_marginRight"
                    android:src="@drawable/privacy_call_log_item_message_bt_selecter" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/call_log_item_top_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c5" />

        <ListView
            android:id="@+id/contactLV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
	        android:overScrollMode="never"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none">
        </ListView>
    </LinearLayout>

</RelativeLayout>