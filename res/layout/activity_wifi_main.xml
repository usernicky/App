    <!--scan content-->

    <RelativeLayout
        android:id="@+id/top_content"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/wifi_title_bar"
        android:background="@color/transparent"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/wifi_result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wifisafety" />

        <TextView
            android:id="@+id/wifi_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wifi_result_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/wifi_acti_big_icon_desc_m_top"
            android:textColor="@color/white"
            android:textSize="@dimen/wifi_acti_big_icon_text_size" />

        <TextView
            android:id="@+id/wifi_sma_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wifi_big_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/wifi_scan_result_no_safe_advice"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <fragment
        android:id="@+id/wifi_scan_tab"
        android:name="com.leo.appmaster.wifiSecurity.WifiTabFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wifi_scaning_fragment_height"
        android:layout_alignParentBottom="true" />

    <fragment
        android:id="@+id/wifi_scan_result"
        android:name="com.leo.appmaster.wifiSecurity.WifiResultFrangment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wifi_title_bar" />
</RelativeLayout>