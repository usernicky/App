        <TextView
            android:id="@+id/wifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/wifi_acti_big_icon_text_m_top"
            android:text="@string/wifi_title_name"
            android:textColor="@color/white"
            android:textSize="@dimen/wifi_acti_big_icon_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wifi_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/wifi_acti_big_icon_desc_m_top"
            android:gravity="center">

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/wifi_scan_icon" />

            <TextView
                android:id="@+id/wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/wifi_icon"
                android:textColor="@color/wifi_icon_text"
