<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ufo_rootview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applocker.UFOActivity" >
    
	<ImageView
        android:id="@+id/iv_splashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/ad_light_splash"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/iv_longlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/ad_light_long"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_circlelight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_longlight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ad_light_circle"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_ufo_withalien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/iv_ufo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ad_ufo" />

        <ImageView
            android:id="@+id/iv_alien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ad_alien_inufo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ADdialog_nodata"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="#00000000"
        android:visibility="invisible" >
        <TextView 
            android:layout_margin="0dp"
            android:textSize="24dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ad_timeout"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_Themedialog"
        android:layout_width="302dp"
        android:layout_height="255dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:visibility="invisible" >
    <ImageView
        android:id="@+id/iv_ThemedialogBg"
        android:layout_width="302dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible" >
        </ImageView>
        
    	<TextView 
    	    android:layout_height="50dp"
    	     android:text="主题介绍（却文案）长长长长长长长长长长长长长长长长长长长长长长长长长长长"
    	    android:textSize="14sp"
    	    android:maxLines="2"
    	   android:textColor="@color/black"
    	    android:layout_width="220dp"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentLeft="true"
    	    android:layout_marginLeft="5dp"
    	    />
    
    	<Button 
    	    android:background="@drawable/select_bt_halfscreen_install"
    	    android:id="@+id/btn_usetheme"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentRight="true"
    	    android:text="Download"
    	    android:textSize="14sp"
    	    android:layout_width="70dp"
    	    android:gravity="center"
        	android:layout_height="40dp"
        	
        	android:layout_marginBottom="10dp"
        	android:layout_marginRight="8dp"
    	    />
    
    	<ImageView
            android:id="@+id/iv_close_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ad_banner_close" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_ADdialog"
        android:layout_width="302dp"
        android:layout_height="285dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:visibility="invisible" >
<!--         android:layout_marginTop="160dp" -->

        <ImageView
            android:id="@+id/iv_appbg_ufo"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@color/grey" />

        <ImageView
            android:id="@+id/iv_close_ufo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ad_banner_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="@drawable/ad_bg_mask"
            android:text="Sponsored  "
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/iv_ufo_ad_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_appname_ufo"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:gravity="top"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_appdesc_ufo"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="top"
                    android:maxLines="2"
                    android:textColor="#333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ufo_dialog_install"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/select_bt_halfscreen_install"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>