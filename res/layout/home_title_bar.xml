<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/title_bar_option_selector"
            android:clickable="false"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/iv_menu_red_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_menu"
            android:layout_marginRight="@dimen/home_left_iv_menu_margin_right"
            android:layout_marginTop="@dimen/home_left_iv_menu_margin_top"
            android:background="@drawable/red_dot"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_option_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/title_bar_option_selector"
        android:padding="10dp"
        android:src="@drawable/password_normal_icon" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pl_logo" />

    <RelativeLayout
        android:id="@+id/bg_show_hotapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/iv_option_image"
        android:background="@drawable/title_bar_option_selector"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/hot_app_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_msg_center_tip" />

    </RelativeLayout>


    <TextView
        android:id="@+id/home_mc_unread_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_show_hotapp"
        android:layout_alignLeft="@id/bg_show_hotapp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="26dp"
        android:includeFontPadding="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/ic_mc_unread_bg"
        android:textColor="@color/white"
        android:textSize="11sp" />

</RelativeLayout>
