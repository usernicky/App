<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_list_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:gravity="center"
    android:paddingBottom="12dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/mode_list_container"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/mode_list_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/dlg_title"
        android:layout_centerHorizontal="true">

        <ListView
            android:id="@+id/mode_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:divider="@drawable/line"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/manager_backup_list_selecter"
            android:overScrollMode="never"
            android:paddingLeft="16dp"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/no_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/position_lock_no_wifi" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mode_list_container"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/dlg_bottom_btn_ripp"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:rippleColor="@color/button_blue_ripple"
            app:rippleDuration="250"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/dlg_bottom_btn"
                style="@style/dlg_right_button_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancel" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

    <TextView
        android:id="@+id/dlg_title"
        style="@style/dlg_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/select_wifi_mode"
        android:visibility="visible" />

</RelativeLayout>