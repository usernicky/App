<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_tilte"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#B0AEAE"
        android:gravity="center"
        android:text="@string/flow_settting_dialog"
        android:textColor="@color/flow_setting_tv"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/content_all_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_tilte"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/seekbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="The remaining traffic 80%"
            android:textColor="@color/flow_item_small"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/content_seek_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <SeekBar
                android:id="@+id/qucik_seekBar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="@dimen/app_manager_hotactivity_list_item_text_des_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:max="100" />

            <TextView
                android:id="@+id/seekbar_text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/TrafficSetting_persent_margin_right"
                android:layout_toRightOf="@id/qucik_seekBar"
                android:text="50%"
                android:textColor="@color/flow_item_small"
                android:textSize="12dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/radioLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/content_all_item"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quick_seekbar_setting_dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/quick_seekbar_setting_dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</RelativeLayout>