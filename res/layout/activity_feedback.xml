<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_background" />

    <FrameLayout
        android:id="@+id/feedback_category_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/layout_title_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/text_bg_normal"
        android:clickable="true" >

        <TextView
            android:id="@+id/feedback_category_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:text="@string/feedback_category_tip"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/feedback_category_arrow"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/choose_normal" />
    </FrameLayout>

    <EditText
        android:id="@+id/feedback_email"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/feedback_category_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/text_bg_selector"
        android:gravity="center_vertical"
        android:hint="@string/feedback_email_tip"
        android:singleLine="true"
        android:maxLength="30"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/feedback_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/feedback_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textbox_bg_selector"
        android:gravity="center_vertical"
        android:hint="@string/feedback_content_tip"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/feedback_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/check_update_button"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/feedback_commit"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>