<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/pri_confirm_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/toolbar_height"
        android:paddingBottom="63dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <View
                android:id="@+id/empty_header"
                android:layout_width="1dp"
                android:layout_height="114dp" />

            <TextView
                android:id="@+id/pri_con_header"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/empty_header"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="@string/pri_pro_summary_not_confirm"
                android:textColor="@color/c3"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/c4" />

            <LinearLayout
                android:id="@+id/list_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/pri_con_header"
                android:background="@color/pri_pro_list_bg"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                
                <!-- 广告 -->
                <include
                    android:id="@+id/advertise_security"
                    layout="@layout/pri_confirm_ad_item"
                    android:visibility="gone" />

                <!-- 手机防盗 -->
                <include
                    android:id="@+id/lost_security"
                    layout="@layout/pri_confirm_lost_item" />

                <!-- 隐私防护 -->
                <include
                    android:id="@+id/intruder_security"
                    layout="@layout/pri_confirm_intruder_item" />

                <include
                    android:id="@+id/contact_security"
                    layout="@layout/pri_confirm_contact_item" />

                <!-- wifi安全 -->
                <include
                    android:id="@+id/wifi_security"
                    layout="@layout/pri_confirm_wifi_item" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <!-- 底部操作区域 -->
    <include
        layout="@layout/pri_pro_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

