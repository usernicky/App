<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingLeft="24dp"
    android:paddingRight="24dp" >

    <LinearLayout
        android:id="@+id/content_all_item"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/dialog_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/flow_settting_dialog"
            android:textColor="@color/flow_setting_tv"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/answer_icon"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/dialog_radio_slide_time_just_home_cb"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:button="@drawable/privacy_contact_input_radio_selecter" />

                <TextView
                    android:id="@+id/dialog_radio__tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/pg_appmanager_quick_gesture_slide_time_just_home_text"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/answer_icon"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/dialog_radio_slide_time_all_app_and_home_cb"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:button="@drawable/privacy_contact_input_radio_selecter" />

                <TextView
                    android:id="@+id/dialog_radio_itme_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/pg_appmanager_quick_gesture_slide_time_home_and_all_app_text"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/free_disturbTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.leo.appmaster.quickgestures.ui.LeoHorizontalListView
            android:id="@+id/quick_gesture_horizontalLV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:scrollbars="none" >
        </com.leo.appmaster.quickgestures.ui.LeoHorizontalListView>

        <TextView
            android:id="@+id/sure_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/manager_backup_button_selecter"
            android:gravity="center"
            android:text="@string/flow_settting_sure_bg"
            android:textColor="@drawable/manager_backup_text_selecter"
            android:textSize="16dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>