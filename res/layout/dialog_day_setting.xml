<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="15dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp" >

    <LinearLayout
        android:id="@+id/content_all_item"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/flow_settting_thrid"
            android:textColor="@color/flow_setting_tv"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/daytraffic_lv"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:divider="@color/selector_day_traffic_set_line"
            android:layout_gravity="center_horizontal"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="15dp"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/manager_backup_list_selecter" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/content_all_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/manager_cancel_left_button_selecter"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@drawable/manager_cancel_text_selecter"
        android:textSize="16dp" />

</RelativeLayout>