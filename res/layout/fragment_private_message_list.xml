<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_privacy_contact_item_paddingLeft" >

    <RelativeLayout
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="72dp" >

        <com.leo.appmaster.privacycontact.CircleImageView
            android:id="@+id/contactIV"
            android:layout_width="@dimen/privacy_contact_icon_size"
            android:layout_height="@dimen/privacy_contact_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/default_user_avatar" />

        <RelativeLayout
            android:id="@+id/message_itemLT"
            android:layout_width="match_parent"
            android:layout_height="@dimen/privacy_call_log_item_calllog_list_message_itemLT_layout_height"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/contactIV" >

            <LinearLayout
                android:id="@+id/message_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/message_list_nameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="联系人"
                        android:textColor="#414141"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/message_list_countTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/message_list_nameTV"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/message_list_dateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="月/天/年"
                      android:gravity="center"
                        android:textColor="#d3d3d3"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/message_list_contentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="短信内容"
                    android:textColor="#9b9b9b"
                    android:textSize="12dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/message_listCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/test_list_divider" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>