<com.leo.appmaster.backup.AppRestoreItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/restore_all_item"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/restore_icon"
            android:layout_width="@dimen/app_manager_lv_item_icon_width_height"
            android:layout_height="@dimen/app_manager_lv_item_icon_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/content_name_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/restore_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restore_app_title"
                android:layout_width="@dimen/app_manager_restore_one_text_height"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/restore_app_version"
                android:layout_width="@dimen/app_manager_restore_two_text_height"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/divider_1"
                android:textSize="13dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp">

            <ImageView
                android:id="@+id/button_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/restore_delete_button_selecter" />

            <ImageView
                android:id="@+id/button_install"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/app_manager_padding"
                android:layout_toRightOf="@id/button_delete"
                android:background="@drawable/restore_button_selecter" />
        </RelativeLayout>

        <View style="@style/priAppItem" />
    </RelativeLayout>

</com.leo.appmaster.backup.AppRestoreItemView>