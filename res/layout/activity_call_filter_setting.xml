<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3f7">

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/wifi_setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.leo.appmaster.ui.RippleView
        android:background="@color/white"
        android:id="@+id/content_item_filter"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/wifi_setting_title_bar"
        app:rippleAlpha="1"
        app:rippleColor="@color/home_tab_pressed"
        app:rippleDuration="250"
        app:rippleHover="true"
        app:rippleOverlay="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/call_filter_name"
                android:textColor="@color/c2"
                android:textSize="@dimen/wifi_set_title_text_size" />

            <TextView
                android:id="@+id/filter_desc"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter_name"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/call_filter_setting_one_desc"
                android:textColor="@color/c4"
                android:textSize="@dimen/wifi_set_title_text_des_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp" />

    </com.leo.appmaster.ui.RippleView>

    <View
        android:id="@+id/line"
        android:layout_below="@id/content_item_filter"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/divider_setting"
        />

    <com.leo.appmaster.ui.RippleView
        android:id="@+id/content_item_noti"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/line"
        app:rippleAlpha="1"
        app:rippleColor="@color/home_tab_pressed"
        app:rippleDuration="250"
        app:rippleHover="true"
        app:rippleOverlay="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/noti_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/call_filter_setting_two_title"
                android:textColor="@color/c2"
                android:textSize="@dimen/wifi_set_title_text_size" />

            <TextView
                android:id="@+id/noti_desc"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/noti_name"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/call_filter_setting_two_desc"
                android:textColor="@color/c4"
                android:textSize="@dimen/wifi_set_title_text_des_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp" />

    </com.leo.appmaster.ui.RippleView>

   <!-- <View
        android:id="@+id/line2"
        android:layout_below="@id/content_item_noti"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/divider_setting"
        />-->
</RelativeLayout>