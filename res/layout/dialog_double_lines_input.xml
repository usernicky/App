<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="13dp"
    android:paddingRight="13dp" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/tips"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_first_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/passwd_question"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#dd1f1f1f" />

            <EditText
                android:id="@+id/et_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_box_line"
                android:ems="10"
                android:enabled="false"
                android:textColor="#dd1f1f1f" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_second_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/anwser"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#dd1f1f1f" />

            <EditText
                android:id="@+id/et_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_box_line"
                android:ems="10"
                android:textCursorDrawable="@null"
                android:textColor="#dd1f1f1f" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_below="@+id/content"
        android:layout_height="wrap_content"
        android:background="@color/item_backup_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent" >
        </ImageView>

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</RelativeLayout>