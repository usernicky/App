<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <RelativeLayout
        android:id="@+id/gesture_success_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
        
    <RelativeLayout
        android:id="@+id/gesture_success_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/success_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/success_title"
            android:src="@drawable/gesture_success" />

        <TextView
            android:id="@+id/success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/quick_gesture_success_title"
            android:textColor="@color/quick_success_title_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
          android:id="@+id/gesture_success_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gesture_success_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/quick_gesture_success_content"
        android:textColor="@color/white"
        android:textSize="14sp" />

     <Button
         android:id="@+id/know_button"
         android:layout_width="100dp"
         android:layout_height="36dp"
         android:layout_below="@+id/gesture_success_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:background="@drawable/manager_done_button_selecter"
         android:text="@string/lock_mode_guide_button_text"
         android:textColor="@color/white"
         android:textSize="16sp" />
</RelativeLayout>

</RelativeLayout>