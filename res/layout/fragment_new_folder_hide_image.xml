<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="com.leo.appmaster.home.PrivacyNewAppFragment">

    <View
        android:id="@+id/empty_header"
        android:layout_width="1dp"
        android:layout_height="@dimen/pri_pro_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/white" />

    <View
        android:id="@+id/pri_offset_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/white" />

    <com.leo.appmaster.ui.ExpandableGridView xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:id="@+id/expand_video_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:divider="@null"
        android:groupIndicator="@null"
        android:listSelector="@android:color/transparent"
        android:headerDividersEnabled="false"
        android:numColumns="3"
        android:overScrollMode="never"
        android:paddingBottom="75dp"
        android:scrollbars="none"
        ripple:columnWidth="109dp"
        ripple:horizontalSpacing="@dimen/pri_new_list_padding"
        ripple:stretchMode="columnWidth"
        ripple:verticalSpacing="@dimen/pri_new_list_padding" />

    <RelativeLayout
        android:id="@+id/pic_loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="@dimen/pri_pro_header"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/pri_new_list_padding"
        android:paddingRight="@dimen/pri_new_list_padding"
        android:paddingTop="@dimen/pri_new_list_padding">


        <ProgressBar
            android:id="@+id/pb_loading_pic"
            style="@style/ProgressBarCricle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />


    </RelativeLayout>

    <include
        layout="@layout/pri_pro_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <include
        android:id="@+id/floating_lable"
        layout="@layout/pri_pro_list_sticky_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pri_pro_new" />

    <include
        layout="@layout/image_folder_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>