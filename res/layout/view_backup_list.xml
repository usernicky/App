<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="@color/backup_tips_background_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_backup_install"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backup_tips_background_color"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/backup_tips_text_color"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_backup_storage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backup_tips_background_color"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/backup_tips_text_color"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_backup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="40dp"
        android:overScrollMode="never"
        android:divider="@null" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:src="@drawable/backup_bottom_shadow" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white" >

        <TextView
            android:id="@+id/button_backup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mycheck_button_selecter"
            android:gravity="center"
            android:text="@string/button_backup"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/check_backup"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/check_all_selector" />
    </FrameLayout>

</FrameLayout>