<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />

    <RelativeLayout
        android:id="@+id/no_hide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/privacy_default_image_width"
                android:layout_height="@dimen/privacy_default_image_height"
                android:layout_gravity="center"
                android:src="@drawable/image_default" />

            <TextView
                android:id="@+id/nohideTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/privacy_default_text_margin_top"
                android:gravity="center"
                android:text="@string/app_no_image_hide"
                android:textColor="#d3d3d4"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/Image_hide_folder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
    </GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bottom_button" >

        <Button
            android:id="@+id/add_hide_image"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/check_update_button"
            android:text="@string/app_add_hide_image"
            android:textColor="@drawable/manager_backup_text_selecter" />
    </RelativeLayout>

</LinearLayout>