<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/mc_list_hori_padding"
    android:paddingRight="@dimen/mc_list_hori_padding"
    android:orientation="vertical"
    android:paddingTop="@dimen/mc_list_item_top_padding">

    <RelativeLayout
        android:id="@+id/mc_title_lyout"
        android:layout_width="match_parent"
        android:layout_height="18dp">

        <ImageView
            android:id="@+id/mc_unread_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_msg_center_unread"/>

        <TextView
            android:id="@+id/mc_time_tv"
            android:text="08-14"
            android:textSize="12sp"
            android:textColor="@color/mc_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mc_title_tv"
            android:textColor="@color/mc_title"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:includeFontPadding="false"
            android:layout_toRightOf="@id/mc_unread_iv"
            android:layout_toLeftOf="@id/mc_time_tv"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/mc_iv"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mc_list_item_height" />

    <TextView
        android:id="@+id/mc_description_tv"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/mc_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>