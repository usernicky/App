    <TextView
        android:id="@+id/dlg_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_btn_height"
        android:layout_below="@+id/list_container"
        android:background="@drawable/manager_cancel_single_button_selecter"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
