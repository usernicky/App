<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="@dimen/dialog_list_width"
        android:layout_height="wrap_content"
        android:background="@drawable/bg" >

        <TextView
            android:id="@+id/dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="18dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/pg_appmanager_quick_gesture_option_trigger_type"
            android:textColor="#676767"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/list_container"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/list_container"
            android:layout_width="@dimen/dialog_list_width"
            android:layout_height="120dp"
            android:layout_below="@+id/dlg_title"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/cb_dialog_area"
                    style="@style/dialog_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="10"
                    android:text="@string/pg_appmanager_quick_gesture_trigger_alide"
                    android:textColor="#a3a3a3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/cb_dialog_whitedot"
                    style="@style/dialog_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="10"
                    android:text="@string/pg_appmanager_quick_gesture_trigger_wihtedot"
                    android:textColor="#a3a3a3"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dlg_2btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_container"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dlg_left_btn"
                style="@style/dlg_left_button_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/dlg_right_btn"
                style="@style/dlg_right_button_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/makesure" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>