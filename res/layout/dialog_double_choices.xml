<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_list_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:gravity="center" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/list_container"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        
        android:layout_below="@+id/dlg_title"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <CheckBox
                android:gravity="center"
                android:id="@+id/cb_dialog_area"
                style="@style/dialog_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
               
                />
            
            <TextView 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsfadsf"
                android:textSize="20sp"
                />
           
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical" >

            <CheckBox
                android:gravity="center"
                android:id="@+id/cb_dialog_whitedot"
                style="@style/dialog_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
               android:checked="false"
                />
            
            <TextView 
                 android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsfadsf"
                android:textSize="20sp"
                />
           
        </LinearLayout>
        
        
        
        
        
        
        
        
