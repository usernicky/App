<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/common_dialog_bg"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="@dimen/dialog_list_width"
        android:layout_height="wrap_content"
        android:background="@drawable/bg" >

        <TextView
            android:id="@+id/dlg_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_free_disturb_app_dialog_title_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/pg_appmanager_quick_gesture_option_trigger_type"
            android:textColor="#333333"
            android:textSize="18dp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/list_container"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/list_container"
            android:layout_width="@dimen/dialog_list_width"
            android:layout_height="120dp"
            android:layout_below="@+id/dlg_title"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/cb_dialog_area"
                    style="@style/dialog_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:maxLines="10"
                    android:text="@string/pg_appmanager_quick_gesture_trigger_alide"
                    android:textColor="#a3a3a3"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/cb_dialog_whitedot"
                    style="@style/dialog_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:maxLines="10"
                    android:text="@string/pg_appmanager_quick_gesture_trigger_wihtedot"
                    android:textColor="#a3a3a3"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dlg_2btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_container"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp" >

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rv_dialog_white_button"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                app:rv_rippleDuration="@integer/ripple_btn_duration" 
                android:layout_weight="1"
                app:rv_alpha="255"
                app:rv_color="@color/button_gray_ripple" >

                <TextView
                    android:id="@+id/dlg_left_btn"
                    style="@style/dlg_left_button_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cancel" />
            </com.leo.appmaster.ui.RippleView>

            <com.leo.appmaster.ui.RippleView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rv_dialog_blue_button"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                app:rv_alpha="255"
                app:rv_rippleDuration="@integer/ripple_btn_duration" 
                app:rv_color="@color/button_blue_ripple" >

                <TextView
                    android:id="@+id/dlg_right_btn"
                    style="@style/dlg_right_button_txt"
                   android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/makesure" />
            </com.leo.appmaster.ui.RippleView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>