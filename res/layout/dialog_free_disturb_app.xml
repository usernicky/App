<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/free_disturb_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B6AFAF"
        android:gravity="center"
        android:text="请选择免干扰应用" >
    </TextView>

    <com.leo.appmaster.quickgestures.view.FreeDisturbPagedGridView
        android:id="@+id/free_disturb_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quick_freed_disturb_dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/quick_freed_disturb_dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</LinearLayout>