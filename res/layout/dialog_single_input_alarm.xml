<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_title"
        style="@style/dlg_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/dialog_title_area_bg"
        android:gravity="center_vertical"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/dlg_content_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_title"
        android:background="@color/dialog_content_area_bg"
        android:paddingBottom="22dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="17dp" >

        <TextView
            android:id="@+id/dlg_content"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/dlg_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_input_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/phone_number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#dd1f1f1f" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_box_line"
                android:ems="10"
                android:hint="@string/india_only"
                android:singleLine="true"
                android:textColor="#dd1f1f1f" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </RelativeLayout>

    <!-- 双btn -->

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_content_area"
        android:background="@color/dialog_btn_area_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="11dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent" >
        </ImageView>

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</RelativeLayout>