<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_background" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_bar_option_selector"
            android:padding="16dp"
            android:src="@drawable/back_btn_menu" />

        <LinearLayout
            android:id="@+id/mode_select_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:background="@drawable/title_bar_option_selector"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mode_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="@dimen/mode_name_max_width"
                android:singleLine="true"
                android:text="lock mode"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_edit_mode_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/common_down" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_sort_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_bar_option_selector"
            android:padding="16dp"
            android:src="@drawable/setting_btn" />

        <ImageView
            android:id="@+id/tip_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_sort_select"
            android:background="@drawable/title_bar_option_selector"
            android:padding="16dp"
            android:src="@drawable/tips_icon" />
    </RelativeLayout>

    <com.leo.appmaster.ui.PagedGridView
        android:id="@+id/pager_unlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

    <RelativeLayout
        android:id="@+id/mask_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_mask_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lock_guide" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mode_mask_name_tv"
            android:layout_below="@+id/mode_mask_name_tv"
            android:layout_marginTop="26dp"
            android:text="@string/start_guide"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mode_mask_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="198dp"
            android:text="@string/lock_guide"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- 引导提示 -->
    <RelativeLayout
        android:id="@+id/guide_tip_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar"
        android:background="#f3f3f3"
        android:visibility="gone" >

        <TextView
            android:id="@+id/finish_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:background="#e8e8e8" />

        <RelativeLayout
            android:id="@+id/finish_RL"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_alignParentBottom="true"
            android:gravity="center" >

            <Button
                android:id="@+id/finish"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/manager_done_button_selecter"
                android:text="@string/applock_guide_set_finish"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/guide_tip_scv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/finish_line"
            android:background="#f3f3f3">

            <LinearLayout
                android:id="@+id/guide_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_title_bar"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/guide_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/applock_guide_tip_title"
                    android:textColor="#5B5B5B"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/guide_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_title"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/applock_guide_tip_subtitle"
                    android:textColor="#5e5e5e"
                    android:textSize="14sp" />
                <!-- 横线 -->

                <RelativeLayout
                    android:id="@+id/security_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:id="@+id/security_LT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/security_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/safe_open" />

                        <TextView
                            android:id="@+id/security_guide_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="@string/applock_guide_tip_security_text"
                            android:textColor="#414141"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/security_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/security_LT"
                        android:background="#e8e8e8" />

                    <TextView
                        android:id="@+id/security_guide_button"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_below="@id/security_line"
                        android:background="@drawable/applock_guide_set_press"
                        android:gravity="center"
                        android:text="@string/applock_guide_set_text"
                        android:textColor="#4285f4"
                        android:textSize="16dp" />
                </RelativeLayout>
                <!-- 横线 -->

                <RelativeLayout
                    android:id="@+id/auto_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:id="@+id/auto_LT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp" >

                        <ImageView
                            android:id="@+id/auto_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/power_star" />

                        <TextView
                            android:id="@+id/auto_guide_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center"
                            android:textColor="#414141"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/quto_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/auto_LT"
                        android:background="#e8e8e8" />

                    <TextView
                        android:id="@+id/auto_guide_button"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_below="@id/quto_line"
                        android:background="@drawable/applock_guide_set_press"
                        android:gravity="center"
                        android:text="@string/applock_guide_set_text"
                        android:textColor="#4285f4"
                        android:textSize="16dp" />
                </RelativeLayout>
                <!-- 横线 -->

                <RelativeLayout
                    android:id="@+id/background_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:id="@+id/background_LT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/background_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/backstage_protection" />

                        <TextView
                            android:id="@+id/background_guide_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center"
                            android:textColor="#414141"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/background_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/background_LT"
                        android:background="#e8e8e8" />

                    <TextView
                        android:id="@+id/background_guide_button"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_below="@id/background_line"
                        android:background="@drawable/applock_guide_set_press"
                        android:gravity="center"
                        android:text="@string/applock_guide_set_text"
                        android:textColor="#4285f4"
                        android:textSize="16dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>