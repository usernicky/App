<com.leo.appmaster.quickgestures.view.QuickGestureContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layerType="hardware" >

    <com.leo.appmaster.quickgestures.view.CornerTabs
        android:id="@+id/cornerTabs"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="left|bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:src="@drawable/rotate_bg_big" />

    <com.leo.appmaster.quickgestures.view.QuickGestureLayout
        android:id="@+id/qg_dymic_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layerType="hardware" />

    <com.leo.appmaster.quickgestures.view.QuickGestureLayout
        android:id="@+id/qg_mostused_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layerType="hardware"
        android:visibility="gone" />

    <com.leo.appmaster.quickgestures.view.QuickGestureLayout
        android:id="@+id/qg_switcher_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layerType="hardware"
        android:visibility="gone" />

</com.leo.appmaster.quickgestures.view.QuickGestureContainer>