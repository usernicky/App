<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/ctb_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1167f0" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ctb_battery" >

        <RelativeLayout
            android:id="@+id/rl_anim_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#1167f0" >

            <RelativeLayout
                android:id="@+id/rl_wholebattery"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true" >

                <com.leo.appmaster.ui.WaveView
                    android:id="@+id/wv_battery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#0866ec" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/battery_mask" />
                
                <LinearLayout 
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_above="@+id/iv_littlebattery"
                    >
                    <TextView 
                        android:textSize="18dp"
                        android:textColor="@color/white"
                         android:layout_width="0dp"
                         android:layout_weight="5"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|right"
                    android:id="@+id/tv_percent_value"
                        />
                    <TextView 
                         android:layout_width="0dp"
                         android:layout_weight="4"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="2dp"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:id="@+id/tv_percent"
                        />
                    
                </LinearLayout>
                
                <ImageView
                    android:id="@+id/iv_littlebattery"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/batterymanage_littlebattery" />
                
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_shield"
                android:visibility="invisible"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:src="@drawable/batterymanage_shield" />
            
            <TextView 
                android:id="@+id/tv_boost_complete"
                android:text="@string/batterymanage_boost_finished"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:layout_marginRight="30dp"
                android:textSize="@dimen/f3"
                android:visibility="invisible"
                android:textColor="@color/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_list_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_anim_layout"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:textColor="@color/c3"
            android:textSize="@dimen/f3" />
        

        <RelativeLayout
            android:id="@+id/rl_apps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom"
            android:layout_below="@+id/tv_list_title"
            android:background="@color/cbg"
            android:padding="8dp"
            android:verticalSpacing="10dp" >

            <GridView
                android:id="@+id/gv_apps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:verticalSpacing="10dp" >
            </GridView>

            <RelativeLayout
                android:id="@+id/rl_empty_or_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/rl_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/just_nothing_show_iv"
                        android:layout_width="@dimen/kongbaiye_width_height"
                        android:layout_height="@dimen/kongbaiye_width_height"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/elect_empty" />

                    <TextView
                        android:id="@+id/tv_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/just_nothing_show_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:gravity="center"
                        android:text="@string/elect_empty_content"
                        android:textColor="@color/nothing_show_text"
                        android:textSize="@dimen/kongbaiye_text_size" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/pb_loading"
                    style="@style/ProgressBarCricle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="@color/pri_pro_divider" />

            <com.leo.appmaster.ui.RippleView
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rv_accelerate"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/green_radius_btn_shape"
                ripple:rippleColor="@color/button_green_ripple"
                ripple:rippleDuration="250"
                ripple:rippleHover="true"
                ripple:rippleOverlay="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/batterymanage_boost"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </com.leo.appmaster.ui.RippleView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_result_layout"
            ></RelativeLayout>
</RelativeLayout>