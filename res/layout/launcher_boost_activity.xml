<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:background="#000000"/>

    <View
        android:id="@+id/bg_statusbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_height"
        android:background="@color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/resuilt_with_ad"
            android:layout_width="@dimen/ad_parent_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_counter"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/accelerate_circle_corner_textview_bg"
                android:text="5"
                android:layout_gravity="right|top"/>

            <RelativeLayout
                android:id="@+id/rl_ad_bg"
                android:layout_width="@dimen/ad_content_width"
                android:layout_height="158dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="98dp">

                <ImageView
                    android:id="@+id/iv_ad_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/ad_content_width"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="256dp"
                android:orientation="horizontal"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_ad_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ad"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:src="@drawable/ad"/>

                        <TextView
                            android:id="@+id/tv_ad_appname"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="#333333"
                            android:textSize="12dp"
                            android:layout_marginLeft="6dp"/>

                    </LinearLayout>


                    <TextView
                        android:maxLines="2"
                        android:id="@+id/tv_ad_appdesc"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:textColor="#999999"
                        android:ellipsize="end"
                        android:textSize="10dp" />



                    
                </LinearLayout>


                <Button
                    android:id="@+id/btn_ad_appcall"
                    android:layout_width="77dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/select_bt_halfscreen_install"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
                />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/ad_content_width"
                android:layout_height="44dp"
                android:background="@drawable/ad_top_bg"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="53dp">

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_accelerat_result"
                android:layout_width="198dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="100dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="15dp"/>

            <View
                android:layout_width="@dimen/ad_view_width"
                android:layout_height="284dp"
                android:layout_gravity="top"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ad_bg"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rocket"
                android:layout_gravity="left|top"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ad_bottom_line"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="55dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ad_top_line"
                android:layout_gravity="right|top"/>

            <ImageView
                android:id="@+id/speed_ad_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:src="@drawable/speed_ad_light"
                android:layout_marginTop="25dp"
                android:visibility="gone"/>

        </FrameLayout>



        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_bg_line"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/iv_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/speed_smoke"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_rocket_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/speed_rocket_fire"
            android:layout_marginBottom="-130dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/speed_rocket" />


    </RelativeLayout>

</RelativeLayout>


