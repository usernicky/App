<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#c0c0c0" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="#70000000" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/unknow_call_first_title"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#304D4DFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="@string/unknow_call_second_title"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/show_text_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/thrid_content_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="@string/unknow_call_thrid_first_title"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/thrid_content_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thrid_content_first"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/unknow_call_thrid_second_title"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thrid_content_second"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/unknow_call_thrid_thrid_title"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/black"
        android:longClickable="true" >

        <ImageView
            android:id="@+id/iv_duanxin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/privacy_hide_pic_icon" />

        <ImageView
            android:id="@+id/iv_guaduan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv_duanxin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/privacy_applock_icon" />

        <ImageView
            android:id="@+id/iv_jieting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_duanxin"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/privacy_privacy_contact_icon" />
    </RelativeLayout>

</LinearLayout>