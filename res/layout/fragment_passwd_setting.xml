<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background" >

    <LinearLayout
        android:id="@+id/layout_passwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="130dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_passwd_1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_passwd_2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_passwd_3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_passwd_4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pw_dline"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_passwd"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" >

            <View
                android:id="@+id/tv_ok"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="#1effffff"
                android:clickable="true"
                android:gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/tv_delete"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/delete_button_selecter" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_passwd_input_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/passwd_hint"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_passwd_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_passwd_input_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
         android:textSize="14sp" 
        android:textColor="#aaffffff"
        android:text="@string/passwd_hint_tip" />

</RelativeLayout>