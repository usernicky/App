<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background" >

    <TextView
        android:id="@+id/tv_passwd_input_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lock_setting_title_margintop"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/first_set_passwd_hint"
        android:textColor="#ffffff"
        android:textSize="@dimen/fragment_lock_password_setting_passwd_input_tip_textsize" />

    <TextView
        android:id="@+id/tv_passwd_function_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_passwd_input_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/digital_passwd_function_hint"
        android:textColor="#ffffff"
        android:textSize="@dimen/fragment_lock_password_setting_tv_passwd_function_tip_textsize" />

    <LinearLayout
        android:id="@+id/layout_passwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_lock_password_setting_layout_passwd_height"
        android:layout_below="@id/tv_passwd_function_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="@dimen/fragment_lock_password_setting_layout_passwd"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_passwd_1"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="bottom|center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_passwd_2"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="bottom|center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_passwd_3"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/pw_dline"
            android:gravity="bottom|center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_passwd_4"
            android:layout_width="@dimen/fragment_lock_password_tv_passwd_width"
            android:layout_height="match_parent"
            android:background="@drawable/pw_dline"
            android:gravity="bottom|center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_passwd"
        android:layout_marginBottom="@dimen/fragment_lock_password_setting_tv_bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:layout_marginLeft="@dimen/fragment_lock_password_tv_passwd_marginleft"
                android:layout_marginRight="@dimen/fragment_lock_password_tv_passwd_marginright"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <View
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:background="#1effffff"
                android:clickable="true"
                android:gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/selector_passwd_input"
                android:clickable="true"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/tv_delete"
                android:layout_width="@dimen/digital_item_width"
                android:layout_height="@dimen/digital_item_height"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/delete_button_selecter" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reset_button_content"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fragment_lock_gesture_setting_tv_bottom_marginbottom"
        android:background="@drawable/reset_pass_frame"
        android:paddingBottom="3dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="3dp"
    	android:gravity="center_vertical"
        android:visibility="invisible" >
		
        <ImageView
            android:id="@+id/iv_reset_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
			 android:layout_centerVertical="true"
            android:background="@drawable/reset_pass_number_icon" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_reset_icon"
            android:text="@string/reset_digital_passwd"
            android:textColor="@color/common_button_selecter"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>