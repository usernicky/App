<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    
    <TextView
        android:id="@+id/tv_passwd_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/passwd_hint"
        android:textColor="#aa0000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout_passwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_passwd_tip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_passwd_1"
            android:layout_width="50dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="#24345423" />

        <TextView
            android:id="@+id/tv_passwd_2"
            android:layout_width="50dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="#24345423" />

        <TextView
            android:id="@+id/tv_passwd_3"
            android:layout_width="50dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="#24345423" />

        <TextView
            android:id="@+id/tv_passwd_4"
            android:layout_width="50dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="#24345423" />
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_reset_passwd"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_passwd"
        android:layout_margin="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="6"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="9"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/delete"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#23298354"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/makesure"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reset_passwd"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="#98734232"
        android:gravity="center"
        android:text="@string/reset_passwd"
        android:textSize="16sp" />

</RelativeLayout>