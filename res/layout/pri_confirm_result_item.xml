<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leo="http://schemas.android.com/apk/res-auto"
    style="@style/ConfirmItem"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/item_header_ll"
        style="@style/SecurityItemHeader">

        <View
            android:id="@+id/lost_item_label"
            style="@style/ItemLabelLost"
            android:background="@color/security_swifty" />

        <TextView
            android:id="@+id/item_title"
            style="@style/ItemTitle"
            android:text="@string/scan_result_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_header_ll"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/c4" />

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/item_btn_rv_one"
            style="@style/ResultItemBtn"
            leo:rippleColor="@color/button_gray_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <ImageView
                android:id="@+id/iv_applock_item"
                style="@style/ResultItemIv"
                android:background="@drawable/ic_pri_lost_security" />

            <TextView
                android:id="@+id/tv_applock_item"
                style="@style/ResultItemTv"
                android:layout_toRightOf="@id/iv_applock_item"
                android:text="@string/scan_done_app" />

            <TextView
                android:id="@+id/item_btn_tv_one"
                style="@style/ItemResultBtnText"
                android:layout_marginRight="19dp"
                android:drawablePadding="7dp"
                android:drawableRight="@drawable/arrow_button_right"
                android:text="@string/fil_noti_bt" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_one"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/c4" />

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/item_btn_rv_two"
            style="@style/ResultItemBtn"
            leo:rippleColor="@color/button_gray_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <ImageView
                android:id="@+id/iv_hidepic_item"
                style="@style/ResultItemIv"
                android:background="@drawable/ic_pri_lost_security" />

            <TextView
                android:id="@+id/tv_hidepic_item"
                style="@style/ResultItemTv"
                android:layout_toRightOf="@id/iv_hidepic_item"
                android:text="@string/scan_done_app" />

            <TextView
                android:id="@+id/item_btn_tv_two"
                style="@style/ItemResultBtnText"
                android:layout_marginRight="19dp"
                android:drawablePadding="7dp"
                android:drawableRight="@drawable/arrow_button_right"
                android:text="@string/fil_noti_bt" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_two"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/c4" />

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/item_btn_rv_three"
            style="@style/ResultItemBtn"
            leo:rippleColor="@color/button_gray_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <ImageView
                android:id="@+id/iv_hidevid_item"
                style="@style/ResultItemIv"
                android:background="@drawable/ic_pri_lost_security" />

            <TextView
                android:id="@+id/tv_hidevid_item"
                style="@style/ResultItemTv"
                android:layout_toRightOf="@id/iv_hidevid_item"
                android:text="@string/scan_done_app" />

            <TextView
                android:id="@+id/item_btn_tv_three"
                style="@style/ItemResultBtnText"
                android:layout_marginRight="19dp"
                android:drawablePadding="7dp"
                android:drawableRight="@drawable/arrow_button_right"
                android:text="@string/fil_noti_bt" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

</RelativeLayout>