<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:gravity="center" >

    <TextView
        android:id="@+id/dlg_pro_hint"
        style="@style/dlg_title_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:paddingTop="20dp"
        android:singleLine="true" >
    </TextView>

    <ProgressBar
        android:id="@+id/dlg_pro"
        style="@style/ProgressBarCricle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_pro_hint"
        android:layout_centerHorizontal="true"
        android:background="@color/dialog_content_area_bg"
        android:maxHeight="247dp"
        android:paddingBottom="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="17dp"
        android:progressDrawable="@drawable/progress_bar" />

    <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_pro"
        android:background="@color/dialog_btn_area_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="11dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="11dp" >

        <TextView
            android:id="@+id/dlg_bottom_btn"
            style="@style/dlg_single_button_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>