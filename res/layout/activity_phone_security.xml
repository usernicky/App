<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/phone_security_commonbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--2-0-->
    <ScrollView
        android:id="@+id/secur_phone_nub_sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/phone_security_commonbar"
        android:overScrollMode="never">

        <RelativeLayout
            android:id="@+id/secur_top_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 开启手机防盗后顶部UI -->
            <include
                android:id="@+id/show_time_lt"
                layout="@layout/secur_open_time_layout"
                android:layout_width="@dimen/secur_open_ui_iv_width"
                android:layout_height="@dimen/secur_open_ui_iv_width"
                android:layout_centerHorizontal="true">
            </include>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
