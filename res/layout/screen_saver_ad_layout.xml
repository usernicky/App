<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/empty_header"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="8dp"
    android:background="#7FFFFFFF"
    android:paddingBottom="9dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/preview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/item_ad_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignRight="@id/item_ad_preview"
            android:layout_alignTop="@id/item_ad_preview"
            android:src="@drawable/ad_after_scan_maker" />

        <LinearLayout
            android:id="@+id/item_header_ll"
            style="@style/ItemHeader"
            android:layout_height="36dp"
            android:layout_alignBottom="@id/item_ad_preview"
            android:background="#7F000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/item_title"
                style="@style/ItemAdTitle"
                android:layout_width="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ad_result_cta"
                android:layout_width="72dp"
                android:layout_height="26dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:background="@drawable/green_radius_btn_shape"
                android:clickable="false"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>