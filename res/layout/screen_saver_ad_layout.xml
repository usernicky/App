<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/empty_header"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="8dp"
    android:background="#7FFFFFFF"
    android:paddingBottom="9dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/preview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.leo.appmaster.ui.ResizableImageView
            android:id="@+id/item_ad_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignRight="@id/item_ad_preview"
            android:layout_alignTop="@id/item_ad_preview"
            android:src="@drawable/ad_after_scan_maker" />

        <LinearLayout
            android:id="@+id/item_header_ll"
            style="@style/ItemHeader"
            android:layout_height="38dp"
            android:layout_below="@id/item_ad_preview"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/c2"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/f5a"
                     />

                <TextView
                    android:id="@+id/item_description"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:textSize="@dimen/f6"
                    android:textColor="@color/c3" />

            </LinearLayout>

            <Button
                android:id="@+id/ad_result_cta"
                android:layout_width="72dp"
                android:layout_height="26dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:background="@drawable/green_radius_btn_shape"
                android:clickable="false"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>