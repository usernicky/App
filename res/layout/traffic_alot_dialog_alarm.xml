<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp" 
    >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/show_traffic_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/traffic_used_lot"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dlg_content"
            style="@style/dlg_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fadeScrollbars="false"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:text="content" />

        <LinearLayout
            android:id="@+id/dlg_2btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="24dp"
            >

            <TextView
                android:id="@+id/dlg_left_btn"
                style="@style/dlg_left_button_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/traffic_used_lot_stop_network" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:background="@color/transparent" >
            </TextView>

            <TextView
                android:id="@+id/dlg_right_btn"
                style="@style/dlg_right_button_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/traffic_used_lot_cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>