<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/trans_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wifi_result_trans_content"
                android:background="@color/transparent" />

            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/trans_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- Advertise -->
                <RelativeLayout
                    android:id="@+id/ad_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wifi_result_1px_bg"
                    android:paddingBottom="19dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/preview_title_layout"
                        android:layout_width="306dp"
                        android:layout_height="149dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/item_ad_preview"
                            android:layout_width="306dp"
                            android:layout_height="149dp" />

                        <LinearLayout
                            android:id="@+id/item_header_ll"
                            style="@style/ItemHeader"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_alignBottom="@id/item_ad_preview"
                            android:background="#7F000000">

                            <View
                                android:id="@+id/item_ad_marker"
                                style="@style/ItemAdMarker" />

                            <TextView
                                android:id="@+id/item_title"
                                style="@style/ItemAdTitle" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/item_middle_ll"
                        style="@style/ItemMiddle"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/preview_title_layout"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/item_summary"
                            style="@style/ItemSummary"
                            android:maxLines="2"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ad_result_cta"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/item_middle_ll"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/green_radius_btn_shape"
                        android:clickable="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </RelativeLayout>
                <!-- Advertise -->

                <ViewStub
                    android:id="@+id/wifimaster_wifi_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout="@layout/wifi_wifimaster_item" />

                <ViewStub
                    android:id="@+id/swifty_wifi_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout="@layout/wifi_swifty_item" />

                <!-- safe content-->
                <RelativeLayout
                    android:id="@+id/safe_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wifi_result_1px_bg"
                    android:padding="19dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/wifi_result_top_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/blue_tiao"
                            android:layout_width="3dp"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:background="@color/wifi_result_blue" />

                        <TextView
                            android:id="@+id/text_flow_guanli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/blue_tiao"
                            android:text="@string/hp_device_gprs"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/small_black_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/wifi_result_top_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/c5" />


                    <RelativeLayout
                        android:id="@+id/low_bottom_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/small_black_line"
                        android:layout_marginTop="19dp">

                        <ImageView
                            android:id="@+id/low_icon"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/wifi_result_traffic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_toRightOf="@id/low_icon"
                            android:text="@string/wifi_scan_result_traffic_text"
                            android:textColor="@color/c2"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <com.leo.appmaster.ui.RippleView
                        android:id="@+id/wifi_resulte_sure"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/low_bottom_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/green_radius_btn_shape"
                        android:clickable="true"
                        ripple:rippleColor="@color/green_button_ripple"
                        ripple:rippleDuration="250"
                        ripple:rippleHover="true"
                        ripple:rippleOverlay="true">

                        <TextView
                            android:id="@+id/wifi_result_sure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/wifi_scan_result_use_now"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
                    </com.leo.appmaster.ui.RippleView>
                </RelativeLayout>
                <!-- safe content-->

                <!-- un safe content-->
                <RelativeLayout
                    android:id="@+id/unsafe_result_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="19dp"
                    android:paddingLeft="34dp"
                    android:paddingRight="34dp"
                    android:paddingTop="19dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/unsafe_ping_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/unsafe_ping_result_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/can_not_connect_wifi"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/unsafe_ping_result_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/loading_bar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/unsafe_wifi_is_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/unsafe_ping_result">

                        <TextView
                            android:id="@+id/unsafe_wifi_is_connect_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/wifi_result_one"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/unsafe_wifi_is_connect_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/loading_bar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/unsafe_wifi_second_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/unsafe_wifi_is_connect"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/unsafe_wifi_second_connect_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/wifi_result_two"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/unsafe_wifi_second_connect_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/loading_bar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/unsafe_wifi_ssl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/unsafe_wifi_second_connect"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/unsafe_wifi_ssl_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/wifi_result_three"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/unsafe_wifi_ssl_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/loading_bar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/unsafe_wifi_pas_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/unsafe_wifi_ssl"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/unsafe_wifi_pas_type_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/wifi_result_four"
                            android:textColor="@color/c2"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/unsafe_wifi_pas_type_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/loading_bar" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_content_empty_unsafe"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="@color/white"
                    android:visibility="gone" />
                <!-- un safe content-->

                <!-- gp content-->
                <ViewStub
                    android:id="@+id/grade_wifi_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout="@layout/wifi_grade_item" />
                <!-- gp content-->

                <ViewStub
                    android:id="@+id/fb_wifi_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout="@layout/wifi_fb_item" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


    <!-- un safe bottom content-->
    <RelativeLayout
        android:id="@+id/wifi_below_view_recomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/wifi_view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pri_pro_divider" />


        <RelativeLayout
            android:id="@+id/wifi_success_lockRT"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_below="@id/view_line"
            android:gravity="center">

            <com.leo.appmaster.ui.RippleView
                android:id="@+id/wifi_resulte_other_wifi"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/green_radius_btn_shape"
                android:clickable="true"
                ripple:rippleColor="@color/green_button_ripple"
                ripple:rippleDuration="250"
                ripple:rippleHover="true"
                ripple:rippleOverlay="true">

                <TextView
                    android:id="@+id/wifi_recomment_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/select_other_wifi"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </com.leo.appmaster.ui.RippleView>
        </RelativeLayout>
    </RelativeLayout>
    <!-- un safe bottomcontent-->

</RelativeLayout>