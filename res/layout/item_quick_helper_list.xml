<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_class"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#f0f3f7"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dce2e9" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dce2e9" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="100dp"
            >

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="bottom"
                android:text="1dfadfadfa"
                android:textColor="#333333"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="dasfdsafddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:textSize="12dp" />
        </RelativeLayout>

        <com.leo.appmaster.ui.RippleView1
            android:id="@+id/rv_add"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:maxWidth="90dp"
            android:minWidth="53dp"
            app:rippleColor="@color/button_blue_stroke_ripple"
            app:rippleDuration="250"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <Button
                android:id="@+id/bt_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/blue_btn_selector"
                android:gravity="center"
                android:maxLines="2"
                android:maxWidth="90dp"
                android:minWidth="52dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/quick_helper_add"
                android:textColor="#2674f6" />
        </com.leo.appmaster.ui.RippleView1>
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#cbcbcb" />


