<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.leo.appmaster.ui.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:rippleColor="@color/menu_ripple"
        app:rippleDuration="150"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <RelativeLayout
            android:id="@+id/ct_option_2_rl"
            style="@style/ToolbarIcon">

            <ImageView
                android:id="@+id/ct_option_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/setup_icon" />
        </RelativeLayout>
    </com.leo.appmaster.ui.MaterialRippleLayout>

    <RelativeLayout
        android:id="@+id/time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/batteryscreen_clock_margintop_bay">

        <!-- 时间 -->
        <RelativeLayout
            android:id="@+id/time_move_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/time_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="10:33"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_big"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/time_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/31"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/time_small_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/time_small"
                    android:text="周四"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 时间 -->

        <!-- 电池 && 图标 -->
        <RelativeLayout
            android:id="@+id/infos_content"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/time_move_content">

            <!-- 电池 -->
            <RelativeLayout
                android:id="@+id/battery_icon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="4dp">

                    <com.leo.appmaster.ui.WaveView xmlns:wave="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/bottle_water"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        wave:bubbleColor="@color/white"
                        wave:bubbleNumber="7"
                        wave:bubblePeriod="2000" />

                    <TextView
                        android:id="@+id/battery_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:text="100%"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bay_gaoguang" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bay_di" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:background="@drawable/battery_bg" />
            </RelativeLayout>

            <!-- 图标2 -->
            <RelativeLayout
                android:id="@+id/hide_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/battery_icon_content">

                <TextView
                    android:id="@+id/hide_tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:text="30"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hide_tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hide_tv_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/screen_protect_time"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 电池 && 图标 -->
    </RelativeLayout>

    <!-- 剩余时间 -->
    <RelativeLayout
        android:id="@+id/remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/batteryscreen_remaintime_margintop">

        <TextView
            android:id="@+id/left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/screen_protect_time"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
    <!-- 剩余时间 -->


    <!-- 滑动区域 -->
    <RelativeLayout
        android:id="@+id/move_boss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/batteryscreen_bossview_height"
        android:layout_above="@id/slider"
        android:background="@color/transparent"
        android:visibility="invisible">

        <com.leo.appmaster.battery.BatteryTestViewLayout
            android:id="@+id/slide_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/batteryscreen_bossview_height">

            <RelativeLayout
                android:id="@+id/move_arrow"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/iv_move_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bay_arrow_up" />

            </RelativeLayout>

            <com.leo.appmaster.battery.SelfScrollView
                android:id="@+id/slide_content_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/move_arrow"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:paddingBottom="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.leo.appmaster.ui.AdWrapperLayout
                        android:id="@+id/ad_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!-- Advertise -->
                        <include
                            android:id="@+id/ad_content"
                            layout="@layout/screen_saver_ad_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp" />
                        <!-- Advertise -->
                    </com.leo.appmaster.ui.AdWrapperLayout>

                    <!-- 推广位1 -->
                    <ViewStub
                        android:id="@+id/content_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ad_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:layout="@layout/screen_saver_card_layout" />

                    <!-- 推广位2 -->
                    <ViewStub
                        android:id="@+id/content_type_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/content_type_1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:layout="@layout/screen_saver_card_layout" />


                </LinearLayout>
            </com.leo.appmaster.battery.SelfScrollView>
        </com.leo.appmaster.battery.BatteryTestViewLayout>
    </RelativeLayout>
    <!-- 滑动区域 -->


    <!-- 滑动解锁 -->
    <!--<com.leo.appmaster.battery.BatteryProtectSlideView xmlns:slider="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/slider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/batteryscreen_slidearea_height"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--slider:maskText="@string/screen_protect_unlock_text"-->
        <!--slider:maskTextMarginLeft="1dp"-->
        <!--slider:maskTextMarginTop="15dp"-->
        <!--slider:maskTextSize="20sp"-->
        <!--slider:slidableLength="208dp" />-->
    <!-- 滑动解锁 -->

    <RelativeLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/batteryscreen_slidearea_height"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/backup_delete_btn" />
    </RelativeLayout>

</RelativeLayout>