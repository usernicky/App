<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="95dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_content_area_bg"
            android:maxHeight="247dp"
            android:minHeight="60dp"
            android:paddingBottom="22dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/dlg_title"
                style="@style/dlg_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/tips"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/icon_and_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dlg_title"
                android:paddingTop="22dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/dlg_single_content"
                    style="@style/dlg_content_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingTop="17dp"
                    android:text="appmaster is downloading" >
                </TextView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/dlg_pro"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:layout_below="@id/icon_and_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView
                android:id="@+id/dlg_pro_state"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/dlg_pro"
                android:layout_marginTop="8dp"
                android:paddingBottom="15dp"
                android:paddingLeft="17dp"
                android:text="0/0" />

            <TextView
                android:id="@+id/dlg_pro_percent"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dlg_pro"
                android:layout_marginTop="8dp"
                android:paddingBottom="15dp"
                android:paddingRight="17dp"
                android:text="0%" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.leo.appmaster.ui.RippleView
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/rv_blue"
            android:layout_marginRight="6dp"
            app:rv_rippleDuration="@integer/ripple_btn_duration" 
            android:layout_weight="1"
            app:rv_alpha="255"
            app:rv_color="@color/button_blue_ripple" >

            <TextView
                android:id="@+id/dlg_bottom_btn"
                style="@style/dlg_right_button_txt"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="@string/cancel" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

</LinearLayout>