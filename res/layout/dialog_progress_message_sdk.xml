<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="95dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_content_area_bg"
            android:maxHeight="247dp"
            android:minHeight="60dp"
            android:paddingBottom="22dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >
            
            <TextView
                android:id="@+id/dlg_title"
                style="@style/dlg_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/tips"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/icon_and_title"
                android:layout_below="@id/dlg_title"
                android:paddingTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/dlg_single_content"
                    style="@style/dlg_content_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingTop="17dp"
                    android:text="appmaster is downloading" >
                </TextView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/dlg_pro"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:layout_below="@id/icon_and_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView
                android:id="@+id/dlg_pro_state"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/dlg_pro"
                android:layout_marginTop="8dp"
                android:paddingBottom="15dp"
                android:paddingLeft="17dp"
                android:text="0/0" />

            <TextView
                android:id="@+id/dlg_pro_percent"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dlg_pro"
                android:layout_marginTop="8dp"
                android:paddingBottom="15dp"
                android:paddingRight="17dp"
                android:text="0%" />
        </RelativeLayout>
    </LinearLayout>

      <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_bottom_btn"
            android:layout_width="match_parent"
            style="@style/dlg_single_button_txt_cancel"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>