<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ResultItemConfirmItem">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/pri_pro_confirm_item"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/box_one"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/bottom_result_app">

            <TextView
                android:id="@+id/item_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/scan_done_app_new"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_one_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_one_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="abv"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <ImageView
                android:id="@+id/item_iv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_one_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_result_none1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_one_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/icon_result_arrow"
                android:gravity="center"
                android:text="@string/fil_noti_bt"
                android:textColor="@color/white"
                android:textSize="11dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/box_two"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/box_one"
            android:background="@drawable/bottom_result_pic">

            <TextView
                android:id="@+id/item_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/scan_done_pic_new"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_two_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_two_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="abv"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <ImageView
                android:id="@+id/item_iv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_two_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_result_none2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_two_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/icon_result_arrow"
                android:gravity="center"
                android:text="@string/fil_noti_bt"
                android:textColor="@color/white"
                android:textSize="11dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/box_three"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/box_two"
            android:background="@drawable/bottom_result_video">

            <TextView
                android:id="@+id/item_three_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/scan_done_vid_new"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_three_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_three_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="abv"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <ImageView
                android:id="@+id/item_iv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_three_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_result_none3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_three_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/icon_result_arrow"
                android:gravity="center"
                android:text="@string/fil_noti_bt"
                android:textColor="@color/white"
                android:textSize="11dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottom_title"
        android:gravity="center">

        <ImageView
            android:id="@+id/small_icon_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_title_handle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/small_icon_result"
            android:text="@string/scan_result_title"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>


</RelativeLayout>