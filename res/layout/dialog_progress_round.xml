<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.leo.appmaster"
    android:id="@+id/dlag_pro_round"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="24dp" >

            <com.leo.appmaster.ui.RoundProgressBar
                android:id="@+id/dlg_pro"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android_custom:centerTextStyle="CUSTOM"
                android_custom:roundColor="@color/gray"
                android_custom:roundProgressColor="#2574f5"
                android_custom:roundWidth="5dp"
                android_custom:textColor="#0084ff" />

            <RelativeLayout
                android:id="@+id/dlg_custom_pro_text"
                android:layout_width="66dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/dlg_pro_text_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="#0084ff"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dlg_pro_text_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dlg_pro_text_down"
                    android:layout_alignBottom="@+id/dlg_pro_text_down"
                    android:layout_toRightOf="@+id/dlg_pro_text_down"
                    android:text="/"
                    android:textColor="#0084ff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/dlg_pro_text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dlg_pro_text_down"
                    android:layout_alignBottom="@+id/dlg_pro_text_down"
                    android:layout_toRightOf="@+id/dlg_pro_text_mark"
                    android:text="90"
                    android:textColor="#0084ff"
                    android:textSize="12dp" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:text="@string/tips"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dlg_content"
            style="@style/dlg_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:text="content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" >

        <com.leo.appmaster.ui.RippleView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rv_dialog_blue_button"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:rv_alpha="255"
            app:rv_rippleDuration="@integer/ripple_btn_duration" 
            app:rv_color="@color/button_blue_ripple" >

            <TextView
                android:id="@+id/dlg_bottom_btn"
                style="@style/dlg_right_button_txt"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="@string/cancel" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

</LinearLayout>