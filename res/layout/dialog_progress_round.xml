<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.leo.appmaster"  
    android:id="@+id/dlag_pro_round"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical"
     >

       <LinearLayout
        android:id="@+id/dlg_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" 
        android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">

         <com.leo.appmaster.ui.RoundProgressBar
        android:id="@+id/dlg_pro"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="22dp"
        android_custom:roundColor="@color/gray"
        android_custom:roundProgressColor="#0084ff"
        android_custom:roundWidth="5dp"
        android_custom:textColor="#0084ff"
        android_custom:textIsDisplayable="true"
        android_custom:centerTextStyle="CUSTOM"
        android_custom:textSize="12sp" />

         <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:text="@string/tips"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dlg_content"
            style="@style/dlg_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:text="content" />
    </LinearLayout>
  <LinearLayout
        android:id="@+id/dlg_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

         <TextView
            android:id="@+id/dlg_bottom_btn"
            style="@style/dlg_single_button_txt_cancel"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>