<com.leo.appmaster.ui.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/home_tab_selector"
    android:gravity="center_vertical">

    <com.leo.appmaster.privacycontact.CircleImageView
        android:id="@+id/contactIV"
        android:layout_width="@dimen/privacy_contact_icon_size"
        android:layout_height="@dimen/privacy_contact_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:src="@drawable/default_user_avatar" />

    <RelativeLayout
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/privacy_call_log_item_calllog_list_message_itemLT_layout_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/contactIV">

        <LinearLayout
            android:id="@+id/add_from_call_log_itemLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_from_call_log_item_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="理奥网络"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_from_call_log_item_nameTV"
                android:layout_marginTop="@dimen/privacy_contact_list_item_layout_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call_log_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/add_from_call_log_item_dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="2014/09/01"
                    android:textSize="13dp"
                    android:textColor="#9b9b9b" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/add_from_call_log_item_contentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add_from_call_log_itemLT"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/calllog_item_check_typeIV"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/unselect"></ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/message_content"
        android:background="@color/c5" />
</com.leo.appmaster.ui.RippleView>