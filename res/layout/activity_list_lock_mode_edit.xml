<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/ctc">

        <com.leo.appmaster.ui.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_back0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:rippleColor="@color/menu_ripple"
            app:rippleDuration="150"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/iv_back"
                style="@style/ToolbarIcon">

                <ImageView
                    android:id="@+id/iv_back_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:src="@drawable/ic_toolbar_back" />
            </RelativeLayout>
        </com.leo.appmaster.ui.MaterialRippleLayout>

        <TextView
            android:id="@+id/mode_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back0"
            android:ellipsize="end"
            android:maxWidth="@dimen/mode_name_max_width"
            android:singleLine="true"
            android:text="lock mode"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_edit_mode_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mode_name_tv"
            android:padding="14dp"
            android:src="@drawable/edit_mode_name" />


        <com.leo.appmaster.ui.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_edit_finish0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:rippleColor="@color/menu_ripple"
            app:rippleDuration="150"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <RelativeLayout
                android:id="@+id/iv_edit_finish"
                style="@style/ToolbarIcon">

                <ImageView
                    android:id="@+id/iv_edit_finish_image"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/mode_done" />
            </RelativeLayout>
        </com.leo.appmaster.ui.MaterialRippleLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/edit_app_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title_bar"
        android:background="@color/white"
        android:divider="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</RelativeLayout>