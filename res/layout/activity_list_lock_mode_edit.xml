<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar_background_color">


        <com.leo.appmaster.ui.RippleView xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_back"
            style="@style/ToolbarIcon"
            android:layout_alignParentLeft="true"
            ripple:rv_alpha="@integer/menu_ripple_alpha"
            ripple:rv_color="@color/menu_ripple"
            ripple:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/iv_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:src="@drawable/ic_toolbar_back" />
        </com.leo.appmaster.ui.RippleView>


        <!--<ImageView-->
        <!--android:id="@+id/iv_back"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/title_bar_option_selector"-->
        <!--android:padding="16dp"-->
        <!--android:src="@drawable/ic_toolbar_back" />-->

        <TextView
            android:id="@+id/mode_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:ellipsize="end"
            android:maxWidth="@dimen/mode_name_max_width"
            android:singleLine="true"
            android:text="lock mode"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_edit_mode_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mode_name_tv"
            android:padding="14dp"
            android:src="@drawable/edit_mode_name" />


        <com.leo.appmaster.ui.RippleView xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_edit_finish"
            style="@style/ToolbarIcon"
            android:layout_alignParentRight="true"
            ripple:rv_alpha="@integer/menu_ripple_alpha"
            ripple:rv_color="@color/menu_ripple"
            ripple:rv_rippleDuration="100">

            <ImageView
                android:id="@+id/iv_edit_finish_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@drawable/mode_done" />
        </com.leo.appmaster.ui.RippleView>

    </RelativeLayout>

    <ListView
        android:id="@+id/edit_app_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title_bar"
        android:background="@color/white"
        android:divider="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</RelativeLayout>