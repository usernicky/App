<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.leo.appmaster.ui.CommonToolbar
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/pb_loading_pic"
            style="@style/ProgressBarCricle"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone" />

        <com.leo.appmaster.ui.HeaderGridView
            android:layout_marginTop="10dp"
            android:id="@+id/image_gallery_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:columnWidth="109dp"
            android:divider="@null"
            android:headerDividersEnabled="false"
            android:listSelector="@null"
            android:numColumns="3"
            android:overScrollMode="never"
            android:paddingRight="@dimen/pri_new_list_padding"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />

        <!--<GridView
            android:id="@+id/image_gallery_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:columnWidth="109dp"
            android:stretchMode="columnWidth"
            android:scrollbarStyle="outsideOverlay" />-->

        <include
            layout="@layout/image_folder_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/secur_bt_rt_hi"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
    <!--首次处理图片首页引导-->
    <fragment
        android:id="@+id/pic_guide"
        android:name="com.leo.appmaster.fragment.GuideFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height" />

</FrameLayout>