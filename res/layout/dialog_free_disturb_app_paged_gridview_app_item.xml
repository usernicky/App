<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/app_item_linearlayout_padding" >

    <com.leo.appmaster.quickgestures.view.FreeDisturbImageView
        android:id="@+id/iv_app_icon_free"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="@dimen/app_item_iv_app_icon_padding" />

    <TextView
        android:id="@+id/tv_app_name_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#686868"
        android:textSize="12dp" />

</LinearLayout>