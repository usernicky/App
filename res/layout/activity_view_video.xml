<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cb" />

    <com.leo.appmaster.ui.LeoPictureViewPager
        android:id="@+id/picture_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar_video"
        android:layout_marginBottom="66dp"
        android:overScrollMode="never" >
    </com.leo.appmaster.ui.LeoPictureViewPager>

    <LinearLayout
        android:id="@+id/bottom_button_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_button"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <Button
             android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:id="@+id/unhide_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/unhide_picture_selector"
            android:text="@string/app_cancel_hide_image"
            android:textColor="@drawable/selector_button_text" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
             android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:id="@+id/delete_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/delete_picture_selector"
            android:text="@string/button_delete"
            android:textColor="@drawable/selector_button_text" />

    </LinearLayout>

</RelativeLayout>