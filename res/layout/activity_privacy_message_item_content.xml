<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageRT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/message_content_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/message_content_send_item_date"
            android:layout_width="@dimen/privacy_message_item_date_tv_width"
            android:layout_height="@dimen/privacy_message_item_date_tv_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/message_send_content_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/message_content_send_item_date"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message_content_send_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dialogue_bg_2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_privacy_message_item_message_content_send_item_layout_paddingLeft"
                android:paddingRight="@dimen/activity_privacy_message_item_message_content_send_item_layout_paddingRight"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/message_content_send_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#a4a4ae"
                android:textSize="7dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_content_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/message_content_receive_item_date"
            android:layout_width="@dimen/privacy_message_item_date_tv_width"
            android:layout_height="@dimen/privacy_message_item_date_tv_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone" />

        <com.leo.appmaster.privacycontact.CircleImageView
            android:id="@+id/contactIV"
            android:layout_width="@dimen/activity_privacy_message_item_circle"
            android:layout_height="@dimen/activity_privacy_message_item_circle"
            android:layout_alignBottom="@+id/message_receive_content_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/default_user_avatar" />

        <LinearLayout
            android:id="@+id/message_receive_content_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/message_content_receive_item_date"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message_content_receive_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/dialogue_bg_1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_privacy_message_item_message_content_receive_item_layout_marginLeft"
                android:paddingRight="@dimen/activity_privacy_message_item_message_content_receive_item_layout_marginRight"
                android:textColor="#716f6f"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/message_content_receive_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:textColor="#a4a4ae"
                android:textSize="7dp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>