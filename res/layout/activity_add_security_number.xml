<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/add_privacy_contact_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cb" />

    <LinearLayout
        android:id="@+id/security_input_number_LT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_privacy_contact_title_bar"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="17dp"
            android:text="@string/secur_input_number"
            android:textColor="#666666"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/sec_input_numberEV"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/sec_add_number_RP"
                android:background="@drawable/blue_edit_bg"
                android:hint="@string/privacy_contact_edittext_hint"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:textColor="@drawable/privacy_contact_edit_edittext_selecter"
                android:textSize="14dp" />

            <com.leo.appmaster.ui.RippleView
                android:id="@+id/sec_add_number_RP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                app:rv_alpha="255"
                ripple:rv_rippleDuration="100"
                app:rv_color="@color/button_blue_ripple" >

                <Button
                    android:id="@+id/sec_add_number_BT"
                    android:layout_width="wrap_content"
                    android:minWidth="70dp"
                    android:maxWidth="90dp"
                    android:layout_height="42dp"
                    android:adjustViewBounds="true"
                    style="@style/dlg_right_button_txt"
                    android:gravity="center"
                    android:text="@string/secur_input_add_bt"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </com.leo.appmaster.ui.RippleView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="40dp"
            android:text="@string/sucri_add_contact"
            android:textColor="#666666"
            android:textSize="14dp"

            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/security_input_number_LT"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ListView
            android:id="@+id/add_contactLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:overScrollMode="never"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none" />

        <com.leo.appmaster.privacycontact.ContactSideBar
            android:id="@+id/contact_sidrbar"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:visibility="gone"></com.leo.appmaster.privacycontact.ContactSideBar>

        <LinearLayout
            android:id="@+id/add_contact_default_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/privacy_default_image_width"
                android:layout_height="@dimen/privacy_default_image_height"
                android:src="@drawable/contact_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_add_contact_default_text"
                android:textColor="#d3d3d4"
                android:textSize="18dp" />
        </LinearLayout>


    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressbar_loading"
        style="@style/theme_loading"
        android:layout_width="30dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:paddingBottom="80dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contact_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/show_head_toast_bg"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30dip"
        android:visibility="invisible" />

</RelativeLayout>