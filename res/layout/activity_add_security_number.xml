<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ctc">

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/add_privacy_contact_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/top_tip_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ph_secur_add_num_top_tip_marg_top"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/ph_secur_top_tip_lt_marg_left"
        android:paddingRight="@dimen/ph_secur_top_tip_lt_marg_left">

        <ImageView
            android:id="@+id/tip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_antitheft_sms" />

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ph_secur_add_num_top_tip_drawpadd"
            android:layout_toRightOf="@id/tip_iv"
            android:text="@string/secur_add_numb_tip"
            android:textColor="@color/c1"
            android:textSize="@dimen/f6" />

        <TextView
            android:id="@+id/top_tip_instr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip_tv"
            android:layout_marginLeft="@dimen/ph_secur_add_num_top_tip_drawpadd"
            android:layout_marginTop="@dimen/top_tip_instr_tv_marg_top"
            android:layout_toRightOf="@id/tip_iv"
            android:drawableLeft="@drawable/icon_antitheft_help"
            android:drawablePadding="@dimen/ph_secur_add_num_top_tip_drawpadd"
            android:paddingBottom="@dimen/top_tip_instr_tv_marg_botm"
            android:text="@string/secur_add_num_tip"
            android:textColor="@color/cb"
            android:textSize="@dimen/f6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/security_input_number_LT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_tip_lt"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/sec_input_numberEV"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/ph_secur_top_tip_lt_marg_left"
            android:layout_marginRight="@dimen/ph_secur_top_tip_lt_marg_left"
            android:background="@drawable/blue_edit_bg"
            android:hint="@string/secur_add_num"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:textColor="@drawable/privacy_contact_edit_edittext_selecter"
            android:textColorHint="@color/c4"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sec_input_numberEV"
            android:layout_marginLeft="@dimen/ph_secur_top_tip_lt_marg_left"
            android:layout_marginRight="@dimen/ph_secur_top_tip_lt_marg_left"
            android:layout_marginTop="8dp"
            android:paddingTop="@dimen/add_num_cb_padding"
            android:paddingBottom="@dimen/add_num_cb_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

           <!-- android:paddingTop="@dimen/add_num_cb_padding"
            android:paddingBottom="@dimen/add_num_cb_padding-->

            <CheckBox
                android:id="@+id/checkBx"
                android:gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:button="@drawable/send_msm_selector"
                android:checked="true"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_instr_tip_str"
                android:textColor="@color/c2"
                android:textSize="@dimen/f5" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/security_input_number_LT"
        android:background="@color/white">

        <View
            android:id="@+id/line_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/c5"></View>

        <LinearLayout
            android:id="@+id/add_contact_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_v"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_antitheft_contacts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:text="@string/privacy_contact_popumenus_from_contact"
                android:textColor="@color/c2"
                android:textSize="@dimen/f4" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/number_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_contact_tip"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="9dp"
            android:background="@color/white">

            <ListView
                android:id="@+id/add_contactLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:overScrollMode="never"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none" />

            <com.leo.appmaster.privacycontact.ContactSideBar
                android:id="@+id/contact_sidrbar"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:visibility="gone"></com.leo.appmaster.privacycontact.ContactSideBar>

            <LinearLayout
                android:id="@+id/add_contact_default_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/privacy_default_image_width"
                    android:layout_height="@dimen/privacy_default_image_height"
                    android:src="@drawable/contact_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_add_contact_default_text"
                    android:textColor="#d3d3d4"
                    android:textSize="18dp" />
            </LinearLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressbar_loading"
            style="@style/theme_loading"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:paddingBottom="80dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/contact_dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30dip"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/botm_bt_lt"
        android:background="@color/c5"></View>

    <RelativeLayout
        android:id="@+id/botm_bt_lt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_num_secur_botm_bt_heigth"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <com.leo.appmaster.ui.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/add_num_botm_bt_width"
            android:layout_height="@dimen/add_num_botm_bt_height"
            android:layout_centerInParent="true"
            app:rippleColor="@color/menu_ripple"
            app:rippleDuration="150"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <Button
                android:id="@+id/add_bt"
                android:layout_width="@dimen/add_num_botm_bt_width"
                android:layout_height="@dimen/add_num_botm_bt_height"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_dialog_blue_button"
                android:text="@string/security_guide_button_text"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>
        </com.leo.appmaster.ui.MaterialRippleLayout>
    </RelativeLayout>
</RelativeLayout>