<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_lock_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cb">

        <com.leo.appmaster.ui.CommonTitleBar
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
        
        <FrameLayout
            android:id="@+id/fragment_contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fragment_lock_margin_top"
            android:layout_below="@id/layout_title_bar"/>

        <FrameLayout
            android:id="@+id/large_adbanner_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_bar"
            android:visibility="gone">

            <android.support.v4.view.ViewPager
                android:id="@+id/large_adbanner_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_lock_large_banner_out_height"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/fragment_lock_large_banner_pading"
                android:paddingRight="@dimen/fragment_lock_large_banner_pading"
                android:layout_gravity="center"
                /><!--"@dimen/fragment_lock_large_banner_out_width"-->
        </FrameLayout>
        
        <RelativeLayout
            android:id="@+id/lockerGuide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout_title_bar"
            android:layout_marginRight="62dp"
            android:background="@drawable/lock_tutorails_button"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/lock_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- 5.1以上版本没有应用查看权限的提示 -->
        <RelativeLayout
            android:id="@+id/rl_nopermission_tip"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_height="25dp" >

            <ImageView
                android:id="@+id/iv_nopermission_tip"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_launcher" />
            
            <TextView 
                android:layout_toRightOf="@id/iv_nopermission_tip"
                android:id="@+id/tv_nopermission_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开启权限以修复应用锁出现的问题"
                />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/switch_bottom_content"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fragment_lock_gesture_setting_tv_bottom_marginbottom"
            android:background="@drawable/reset_pass_frame"
            android:paddingBottom="3dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/iv_reset_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/switch_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/iv_reset_icon"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/common_button_selecter"
                android:textSize="13dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_AD_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_bar"
            android:layout_marginLeft="40dp"
            android:background="@drawable/alien_bg1"
            android:focusable="true"
            android:onClick="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pretend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"></RelativeLayout>

</FrameLayout>