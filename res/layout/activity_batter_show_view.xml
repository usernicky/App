<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/batter_view_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_desk_protect"
    android:gravity="center">

    <android.support.v4.view.ViewPager
        android:id="@+id/battery_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:overScrollMode="never" />

    <fragment
        android:id="@+id/battery_guide"
        android:name="com.leo.appmaster.fragment.GuideFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height_re_less" />
</RelativeLayout>