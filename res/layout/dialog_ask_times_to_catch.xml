<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:background="@drawable/choice_dialog_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/choice_dialog_bg"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    >
<!--         android:textColor="#00a8ff" -->
	    <TextView 
        android:id="@+id/tv_ask"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        />
	    
	    <View 
	        android:layout_above="@+id/lv_choices"
	        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cbcbcb"
	        />
    
    <ListView 
        android:padding="2dp"
        android:divider="#cbcbcb"
        android:dividerHeight="1px"
        android:id="@+id/lv_choices"
        android:layout_below="@id/tv_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    
     <View 
         android:layout_below="@id/lv_choices"
	        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cbcbcb"
	        />
    
</RelativeLayout>
    
    
</LinearLayout>
