<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />
    
    <LinearLayout
        android:id="@+id/for_pressed_effect"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/bottom"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/pressed_effect1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:id="@+id/pressed_effect2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/layout_title_bar"
        android:background="@drawable/home_info_bg" 
        android:layout_centerHorizontal="true"
>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/digital_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/digital_0"
                android:layout_width="@dimen/digital_width"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/digital_1"
                android:layout_width="@dimen/digital_width"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/digital_2"
                android:layout_width="@dimen/digital_width"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:text="@string/app_count"
            android:textSize="15dp" 
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/dline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_dline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dline"
            android:layout_marginTop="@dimen/memory_flow_marginTop">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/flow_icon_width"
                android:layout_height="@dimen/flow_icon_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/flow_icon_marginRight"
                android:layout_marginTop="@dimen/flow_icon_marginTop"
                android:scaleType="centerCrop"
                android:src="@drawable/flow_icon" />

            <LinearLayout
                android:id="@+id/cicle_container"
                android:layout_width="@dimen/cicle_container_width"
                android:layout_height="@dimen/cicle_container_width"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/imageView3"
                android:background="@drawable/memory_shadow"
                android:gravity="center"
                android:orientation="horizontal" >

                     <com.leo.appmaster.ui.CricleView
                    android:id="@+id/cricle_view"
                    android:layout_width="@dimen/cicle_width"
                    android:layout_height="@dimen/cicle_width"
                    android:background="@drawable/memory_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_memory_percent"
                android:layout_width="@dimen/cicle_container_width"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cicle_container"
                android:layout_alignTop="@+id/cicle_container"
                android:layout_marginTop="@dimen/cicle_container_halfwidth"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/white"
                android:textSize="14dp" />
            
            <TextView
                android:id="@+id/tv_memory_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cicle_container"
                android:layout_alignRight="@+id/cicle_container"
                android:layout_below="@+id/cicle_container"
                android:layout_marginTop="@dimen/memory_flow_text1_marginTop"
                android:gravity="center"
                android:text="0M"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_accelerate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cicle_container"
                android:layout_below="@+id/tv_memory_info"
                android:layout_marginTop="@dimen/memory_flow_text2_marginTop"
                android:layout_marginLeft="-5dp"
                android:gravity="center"
                android:text="@string/used_memory"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_flow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_accelerate"
                android:layout_alignLeft="@+id/imageView3"
                android:gravity="center"
                android:text="245M"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_accelerate"
                android:layout_alignBottom="@+id/tv_accelerate"
                android:layout_alignLeft="@+id/tv_flow"
                android:layout_alignRight="@+id/tv_flow"
                android:gravity="center"
                android:text="@string/used_flow"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ tv_app_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/applock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_lock"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
            <View 
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5"/>
            <LinearLayout
                android:id="@+id/ tv_app_backup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" 
                android:background="@color/white" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/appbackup_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_backup"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFF5F5F5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ tv_clean_memory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/home_button_selecter"  >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/appspeed_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/clean_memory"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
            <View 
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5"/>
            <LinearLayout
                android:id="@+id/ tv_app_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" 
                android:background="@drawable/home_button_selecter" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/setting_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_setting_about"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>