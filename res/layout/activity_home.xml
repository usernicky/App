<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res/com.leo.appmaster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:background="@color/app_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.leo.appmaster.home.TasksCompletedView
        android:id="@+id/tasksCompletedView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_title_bar"
        android:layout_marginTop="15dp"
        tc:circleColor="@color/circle_color"
        tc:radius="60dip"
        tc:ringColor="@color/ring_color"
        tc:strokeWidth="20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tasksCompletedView"
        android:layout_centerHorizontal="true"
        android:background="@color/app_background"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_app_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_manage"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_app_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_lock"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_clean_memory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/clean_memory"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_app_backup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_backup"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>