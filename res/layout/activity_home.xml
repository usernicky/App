<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />

    <LinearLayout
        android:id="@+id/for_pressed_effect"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/bottom"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/pressed_effect1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:id="@+id/pressed_effect2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/layout_title_bar"
        android:layout_centerHorizontal="true"
        android:background="@color/app_background" >

        <com.leo.appmaster.home.CircleAnimView
            android:id="@+id/lock_circle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_bottom_item_height" >

            <LinearLayout
                android:id="@+id/ tv_app_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_applock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_lock"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5" />

            <LinearLayout
                android:id="@+id/tv_app_lock_theme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_hidden_video_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_lock_theme"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF5F5F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_bottom_item_height" >

            <LinearLayout
                android:id="@+id/ tv_picture_hide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_hidden_picture_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_image_hide"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5" />

            <LinearLayout
                android:id="@+id/ tv_video_hide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_hidden_video_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_video_hide"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF5F5F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_bottom_item_height" >

            <LinearLayout
                android:id="@+id/ tv_app_backup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/setting_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_backup_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_backup_uninstall"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5" />

            <LinearLayout
                android:id="@+id/tv_file_trans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_button_selecter"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/file_trans_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/home_backup_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/file_trans"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>