<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <com.leo.appmaster.ui.CommonTitleBar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/layout_title_bar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_info_bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/digital_0"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/digital_1"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/digital_2"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:text="App Installed"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/dline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_dline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/dline"
            android:layout_marginBottom="18dp" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="160dp"
                android:layout_height="92dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flow_icon" />

            <LinearLayout
                android:id="@+id/cicle_container"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/imageView3"
                android:background="@drawable/memory_shadow"
                android:gravity="center"
                android:orientation="horizontal" >

                 <com.leo.appmaster.ui.CricleView
                    android:id="@+id/cricle_view"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:background="@drawable/memory_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_memory_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cicle_container"
                android:layout_alignRight="@+id/cicle_container"
                android:layout_below="@+id/cicle_container"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="654M/2G"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_accelerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cicle_container"
                android:layout_below="@+id/tv_memory_info"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Used Memory"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_flow"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_accelerate"
                android:layout_alignLeft="@+id/imageView3"
                android:gravity="center"
                android:text="245M"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_accelerate"
                android:layout_alignBottom="@+id/tv_accelerate"
                android:layout_alignLeft="@+id/tv_flow"
                android:layout_alignRight="@+id/tv_flow"
                android:gravity="center"
                android:text="UsedFlow"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ tv_app_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/applock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_lock"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ tv_app_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/appmanager_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_manage"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ tv_clean_memory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/appspeed_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/clean_memory"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ tv_app_backup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/appbackup_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_backup"
                    android:textColor="@color/text_color_blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>