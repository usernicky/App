<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <com.leo.appmaster.ui.CommonTitleBar
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background"  />
    
    <RelativeLayout
        android:id="@+id/no_hide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/initial_bg_video" />

            <TextView
                android:id="@+id/nohideTV"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    
    <GridView
        android:id="@+id/Video_hide_folder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fadingEdge="none"
        android:numColumns="2" 
        android:listSelector="@android:color/transparent">
    </GridView>

    <RelativeLayout
        android:id="@+id/video_gallery_buttom"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bottom_button" >
        <Button 
            android:id="@+id/add_hide_image"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/app_add_hide_image"
            android:background="@drawable/check_update_button"/>
    </RelativeLayout>

</LinearLayout>
