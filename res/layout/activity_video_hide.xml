<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pb_loading_vid_hide"
        style="@style/ProgressBarCricle"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/no_hide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/privacy_default_image_width"
                android:layout_height="@dimen/privacy_default_image_height"
                android:layout_gravity="center"
                android:src="@drawable/privacy_video_default" />

            <TextView
                android:id="@+id/nohideTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/empty_page_text_m_top"
                android:gravity="center"
                android:textColor="#d3d3d4"
                android:textSize="@dimen/kongbaiye_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/Video_hide_folder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/video_gallery_buttom"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bottom_button">

        <Button
            android:id="@+id/add_hide_image"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/check_update_button"
            android:text="@string/app_add_hide_image"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>