<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notify_whole"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/content_game_all_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/appwallIV"
            android:layout_width="@dimen/noti_spe_icon_height"
            android:layout_height="@dimen/noti_spe_icon_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/noti_spe_icon_m_left"
            android:src="@drawable/battery_icon_notice" />

        <LinearLayout
            android:layout_toRightOf="@id/appwallIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/appwall_mid_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_charge_number_1"
                        android:textColor="@color/cgn"
                        android:textSize="27dp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_charge_mark_1"
                        android:textColor="@color/c2"
                        android:textSize="18dp"
                        android:text="h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_charge_number_2"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/cgn"
                        android:textSize="27dp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_charge_mark_2"
                        android:textColor="@color/c2"
                        android:textSize="18dp"
                        android:text="m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_charge_tip"
                    android:textColor="@color/c2"
                    android:textSize="@dimen/f5"
                    android:text="@string/battery_saver_remain_charge_time"
                    android:singleLine="true"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/appwall_left"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/noti_spe_butt_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/noti_spe_content_m_left"
                android:background="@drawable/clr_mem_noti_bt"
                android:maxWidth="76dp"
                android:minWidth="@dimen/noti_spe_fr_butt_width"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/free_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/fil_noti_bt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/noti_spe_content_small_text_size" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
