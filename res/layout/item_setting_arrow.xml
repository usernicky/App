<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_wifi_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.leo.appmaster.ui.RippleView
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="68dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        app:rippleAlpha="1"
        app:rippleColor="@color/home_tab_pressed"
        app:rippleDuration="250"
        app:rippleHover="true"
        app:rippleOverlay="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/rl_content_tip"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLines="4"
                android:text="@string/home_tab_wifi"
                android:textColor="@color/c2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:text="@string/airsig_settings_activity_title"
                android:textColor="@color/c4"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_content_tip"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_settings_arrow" />
        </RelativeLayout>

    </com.leo.appmaster.ui.RippleView>
</RelativeLayout>


