<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_splash_bg"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_icon_margin_top"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_view_splash_center"
            android:layout_width="180dp"
            android:layout_height="@dimen/splash_icon_height"
            android:scaleType="fitCenter"
            android:src="@drawable/splash_icon"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/splash_name_width"
        android:layout_height="@dimen/splash_name_height"
        android:layout_marginBottom="@dimen/splash_name_margin_bottom"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_name" />

</RelativeLayout>