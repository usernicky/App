<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/cancel_hide_pic_item_padding">

    <FrameLayout
        android:id="@+id/fralay_top"
        android:layout_width="109dp"
        android:layout_height="109dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <ImageView
        android:id="@+id/photo_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/cancel_hide_pic_item_icon_padding"
        android:paddingRight="@dimen/cancel_hide_pic_item_icon_padding"
        android:src="@drawable/ic_check_normal_n" />

</RelativeLayout>