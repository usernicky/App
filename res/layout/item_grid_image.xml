<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="23dp"  >

    <FrameLayout
       android:id="@+id/fralay_top"
        android:layout_width="140dp"
        android:layout_height="139dp"
        android:background="@drawable/photo_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:adjustViewBounds="true"
            android:scaleType="center"  />
            <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@drawable/selector_over_frame"  />
    </FrameLayout>

        <TextView
            android:id="@+id/txt_item_picture"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/fralay_top"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/grey" />

        <ImageView
            android:id="@+id/photo_select"
            android:layout_width="29dip"
            android:layout_height="29dip"
            android:layout_marginTop="92dp"
            android:layout_marginLeft="92dp"
            android:src="@drawable/pic_choose_normal" />

</RelativeLayout>