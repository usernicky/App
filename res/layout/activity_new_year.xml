<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stone_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/stone_ny_header" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="this is the new year activity info" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_box_line"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/india_only"
        android:singleLine="true"
        android:text="phone number of your friend"
        android:textColor="#dd1f1f1f"
        android:textSize="14dp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/iv_view_pager"
        android:layout_width="350dp"
        android:layout_height="262dp"
        android:layout_below="@id/et_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/stone_post" />

    <Button
        android:id="@+id/send_sms"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/mycheck_button_selecter"
        android:layout_marginBottom="20dp"
        android:text="@string/send_sms"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

</RelativeLayout>