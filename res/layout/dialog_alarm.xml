<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="95dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/dialog_title_area_bg"
            android:gravity="center_horizontal"
            android:text="@string/tips"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="247dp"
            android:background="@color/dialog_content_area_bg"
            android:minHeight="60dp"
            android:paddingBottom="22dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="22dp" >

            <ImageView
                android:id="@+id/dlg_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/dlg_icon_fail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dlg_content"
                style="@style/dlg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dlg_left_icon"
                android:text="content" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 双btn -->

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlg_title_layout"
        android:background="@color/dialog_btn_area_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="11dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent" >
        </ImageView>

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/makesure" />
    </LinearLayout>

</RelativeLayout>