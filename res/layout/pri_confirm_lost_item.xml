<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leo="http://schemas.android.com/apk/res-auto"
    style="@style/ConfirmItem">

    <LinearLayout
        android:id="@+id/item_header_ll"
        style="@style/SecurityItemHeader">

        <View
            android:id="@+id/lost_item_label"
            style="@style/ItemLabelLost"
            android:background="@color/security_lost" />

        <TextView
            android:id="@+id/item_title"
            style="@style/ItemTitle"
            android:text="@string/home_tab_lost" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_middle_ll"
        style="@style/SecurityItemMiddle"
        android:layout_below="@id/item_header_ll">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pri_lost_security" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_summary"
                style="@style/ItemSummary"
                android:text="@string/pri_pro_lost_summary" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_middle_fixed_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/item_header_ll"
        android:layout_marginTop="-16dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/fixed_image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pri_lost_security" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fixed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/pri_pro_lost_fixed_title"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/fixed_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/pri_pro_lost_fixed_pattern"
                android:textColor="@color/cb2"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_middle_ll"
        android:orientation="vertical">

        <View
            android:id="@+id/item_btn_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/c4" />

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/item_btn_rv"
            style="@style/SecurityItemBtn"
            leo:rippleColor="@color/button_gray_ripple"
            leo:rippleDuration="250"
            leo:rippleHover="true"
            leo:rippleOverlay="true">

            <TextView
                android:id="@+id/item_btn_tv"
                style="@style/ItemBtnText"
                android:drawablePadding="7dp"
                android:drawableRight="@drawable/arrow_button_right" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

</RelativeLayout>