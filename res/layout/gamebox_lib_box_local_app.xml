<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gamebox_lib_box_app_item_container_width"
    android:layout_height="@dimen/gamebox_lib_box_app_item_container_hegiht"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <com.leo.game.box.widget.FilterImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/gamebox_lib_box_app_item_image_width"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/gamebox_lib_box_app_item_image_height"
        android:scaleType="fitXY"></com.leo.game.box.widget.FilterImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/gamebox_lib_box_app_item_name_margin_top"
        android:gravity="center"
        android:maxLines="2"
        android:text="我是大好人"
        android:textColor="@color/gamebox_lib_box_app_item_textcolor"
        android:textSize="@dimen/gamebox_lib_box_app_item_name_textsize"></TextView>

</RelativeLayout>