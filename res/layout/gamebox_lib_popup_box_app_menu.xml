<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/remove_app_txt"
        android:layout_width="@dimen/gamebox_lib_home_box_app_menu_container_width"
        android:layout_height="@dimen/gamebox_lib_home_box_app_menu_container_height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/gamebox_lib_home_box_app_menu_remove_text_margin_left"
        android:layout_marginRight="@dimen/gamebox_lib_home_box_app_menu_remove_text_margin_right"
        android:background="@drawable/gamebox_lib_home_app_menu_container_background"
        android:gravity="center"
        android:text="@string/gamebox_lib_home_box_app_menu_remove"
        android:textColor="@color/gamebox_lib_home_box_app_menu_remove_textcolor"
        android:textSize="@dimen/gamebox_lib_home_box_app_menu_remove_textsize" />
</RelativeLayout>