<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/activity_lock_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.leo.appmaster.ui.CommonTitleBar
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/fragment_contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_title_bar" >
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/lockerGuide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout_title_bar"
            android:layout_marginRight="50dp"
            android:background="@drawable/lock_tutorails_button"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:id="@+id/lock_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <TextView
            android:id="@+id/switch_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="@color/common_button_selecter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pretend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >
    </RelativeLayout>

</FrameLayout>