<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlag_rt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mode_name"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et_second"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/message_item_text_box_selecter"
            android:ems="10"
            android:paddingRight="12dp"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textSize="14dp" 
            android:textColor="#dd1f1f1f"
            android:textCursorDrawable="@null"
             android:hint="@string/please_input_mode_name"
           />
            <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.leo.appmaster.ui.RippleView
            xmlns:tools="http://schemas.android.com/tools"
			android:id="@+id/rv_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            app:rv_rippleDuration="@integer/ripple_btn_duration" 
            android:layout_marginRight="6dp"
            app:rv_alpha="255"
            app:rv_color="@color/button_gray_ripple" >

            <TextView
                android:id="@+id/dlg_left_btn"
                style="@style/dlg_left_button_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancel" />
        </com.leo.appmaster.ui.RippleView>

        <com.leo.appmaster.ui.RippleView
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:id="@+id/rv_blue"
            app:rv_rippleDuration="@integer/ripple_btn_duration" 
            android:layout_marginRight="6dp"
            app:rv_alpha="255"
            app:rv_color="@color/button_blue_ripple" >
        
        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/makesure" />
        </com.leo.appmaster.ui.RippleView>
    </LinearLayout>

</LinearLayout>