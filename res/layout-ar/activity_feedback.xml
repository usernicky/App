<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    android:orientation="vertical" >

    <com.leo.appmaster.ui.CommonToolbar
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background_color" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/feedback_category_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/feedback_category_guide"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <FrameLayout
                android:id="@+id/feedback_category_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/feedback_category_guide"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/feedback_category_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="32dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="@string/feedback_category_tip"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/feedback_category_arrow"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/pswd_protected_down" />
            </FrameLayout>

            <TextView
                android:id="@+id/feedback_email_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_category_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/feedback_email_guide"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <FrameLayout
                android:id="@+id/feedback_email_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/feedback_email_guide"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message_item_text_box_selecter" >

                <EditText
                    android:id="@+id/feedback_email"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="32dp"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:maxLength="30"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/feedback_email_arrow"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/pswd_protected_down" />
            </FrameLayout>

            <TextView
                android:id="@+id/feedback_content_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_email_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/feedback_content_guide"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/feedback_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/feedback_content_guide"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message_item_text_box_selecter"
                android:gravity="right|top"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>