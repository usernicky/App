<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lock_help_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/lock_help_item_pager_card_width"
        android:layout_height="@dimen/lock_help_item_pager_card_height"
        android:background="@drawable/card_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lock_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lock_help_item_pager_lock_help_title_margintop"
            android:textSize="16dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/help_setting_title"/>

        <TextView
            android:id="@+id/lock_help_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lock_help_title"
            android:layout_marginTop="@dimen/lock_help_item_pager_lock_help_content_margintop"
            android:layout_marginLeft="20dp"
            android:textColor="@color/help_setting_content"
            android:textSize="12dp"
            android:lineSpacingExtra="8dp"
            android:layout_marginRight="20dp"
            android:maxLines="5"
            android:text="@string/lock_help_password_setting_content_password" />

        <RelativeLayout
            android:id="@id/success_lockRT"
            android:layout_width="@dimen/lock_help_item_pager_bottom_width"
            android:layout_height="@dimen/lock_help_item_pager_bottom_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom"
            android:gravity="center" >

            <TextView
                android:id="@+id/lock_help_bt"
                android:layout_width="@dimen/lock_help_item_pager_button_width"
                android:layout_height="@dimen/lock_help_item_pager_button_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mycheck_button_selecter"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>