<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/content_game_all_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/appwallIV"
            android:layout_width="@dimen/noti_spe_icon_height"
            android:layout_height="@dimen/noti_spe_icon_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/noti_spe_icon_m_left"
            android:src="@drawable/battery_icon_notice" />

        <LinearLayout
            android:layout_toRightOf="@id/appwallIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/appwall_mid_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/noti_spe_content_m_left"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/app_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cool_red"
                        android:textSize="@dimen/noti_spe_content_small_text_size"/>

                    <TextView
                        android:id="@+id/app_detail"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_toRightOf="@id/app_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/batterymanage_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/noti_spe_content_small_text_size" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/applist_layout"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_app1"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/iv_app2"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/iv_app3"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/iv_app4"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/iv_app5"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/iv_app6"
                        android:layout_marginRight="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <TextView
                        android:id="@+id/tv_dotdotdot"
                        android:text="..."
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/appwall_left"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/noti_spe_butt_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/noti_spe_content_m_left"
                android:background="@drawable/clr_mem_noti_bt"
                android:maxWidth="76dp"
                android:minWidth="@dimen/noti_spe_fr_butt_width"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/free_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/batterymanage_notif_process"
                    android:textColor="@color/white"
                    android:textSize="@dimen/noti_spe_content_small_text_size" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
