<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/content_game_all_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/noti_spe_icon_m_left"
            android:src="@drawable/intercept" />

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:id="@+id/appwall_mid_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/appwall_left"
            android:layout_marginRight="@dimen/noti_spe_content_m_left"
            android:layout_toLeftOf="@id/iv_ic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/clean_mem_notify_big"
                    android:textColor="@color/c3"
                    android:gravity="top"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:gravity="top|right"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/clean_mem_notify_small"
                android:textColor="@color/c3"
                android:textSize="@dimen/noti_spe_content_small_text_size" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/appwall_left"
            android:layout_width="60dp"
            android:layout_height="@dimen/noti_spe_butt_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/clr_mem_noti_bt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/free_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/fil_noti_bt"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/noti_spe_content_small_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
