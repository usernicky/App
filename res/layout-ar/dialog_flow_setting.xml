<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/content_seek_text"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" >

            <TextView
                android:id="@+id/seekbar_text_progress"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/lock_settings_icon"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.leo.appmaster.ui.LeoSeekBar
                android:id="@+id/mSeekBar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="@dimen/app_manager_hotactivity_list_item_text_des_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar_text_progress"
                android:layout_marginTop="5dp"
                android:max="100" />

            <!--
                 <TextView
                android:id="@+id/seekbar_text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="true"
                android:layout_toRightOf="@+id/mSeekBar"
                android:text="50%"
                android:textColor="@color/flow_item_small"
                android:textSize="12dp" />
            -->

        </RelativeLayout>

        <TextView
            style="@style/dlg_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/flow_settting_dialog" />

        <TextView
            android:id="@+id/seekbar_text"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:text="The remaining traffic 80%" />
    </LinearLayout>

    <TextView
        android:id="@+id/sure_button"
        style="@style/dlg_single_button_txt_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/makesure" />

</LinearLayout>