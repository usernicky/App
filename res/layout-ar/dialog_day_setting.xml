<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:gravity="center" >

    <RelativeLayout 
          android:layout_width="@dimen/dialog_list_width"
  		  android:layout_height="wrap_content"
        >
    
    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/flow_settting_thrid"
        android:textColor="#676767"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/daytraffic_lv"
        android:background="@drawable/line" />

    <ListView
        android:id="@+id/daytraffic_lv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/dlg_title"
        android:divider="@drawable/line"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/manager_backup_list_selecter"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="16dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_btn_height"
        android:layout_below="@+id/daytraffic_lv"
        android:background="@drawable/manager_cancel_single_button_selecter"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
</LinearLayout>