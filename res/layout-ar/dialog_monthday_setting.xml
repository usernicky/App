<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.leo.appmaster"
    android:id="@+id/dlag_rt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_all_item"
        android:layout_width="@dimen/dlg_horizental_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/traff_first_page_small_set"
            android:textColor="@color/flow_setting_tv"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/traff_first_page_small_set_low"
            android:textColor="@color/flow_item_small"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/flow_settting_thrid_month_used_data"
            android:textColor="@color/flow_item_small"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/first_ed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reply_custom_message_edit_background"
            android:digits="1234567890"
            android:gravity="right|center_vertical"
            android:maxEms="5"
            android:maxLength="5"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/flow_setting_tv"
            android:textCursorDrawable="@null"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/flow_settting_thrid_second_tv"
            android:textColor="@color/flow_item_small"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/second_ed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reply_custom_message_edit_background"
            android:digits="1234567890"
            android:gravity="right|center_vertical"
            android:maxEms="5"
            android:maxLength="5"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/flow_setting_tv"
            android:textCursorDrawable="@null"
            android:textSize="14dp" />
    </LinearLayout>

    <com.leo.appmaster.ui.RippleView
        android:id="@+id/rv_dialog_blue_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:rippleColor="@color/button_blue_ripple"
        app:rippleDuration="250"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <TextView
            android:id="@+id/sure_button"
            style="@style/dlg_right_button_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/flow_settting_sure_bg"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </com.leo.appmaster.ui.RippleView>

</LinearLayout>