<com.leo.appmaster.ui.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rippleAlpha="1"
    app:rippleColor="@color/home_tab_pressed"
    app:rippleDuration="250"
    app:rippleHover="true"
    app:rippleInAdapter="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="17dp"
        android:background="@drawable/new_list_selecter"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        
              <ImageView
            android:id="@+id/update_red_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/red_dot"
            android:visibility="gone" />
        
        <TextView
            android:gravity="center_vertical|right"
            android:id="@+id/menu_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawablePadding="16dp"
            android:textColor="#636363"
            android:textSize="16dp" />
    </LinearLayout>
</com.leo.appmaster.ui.MaterialRippleLayout>