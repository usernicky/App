<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="unified_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LEOButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearanceSettingsNewFlag">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearanceMainTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="dlg_title_txt">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/app_background</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dlg_content_txt">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="dlg_single_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_bg_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="dlg_left_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_bg_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">32dp</item>
        
    </style>

    <style name="dlg_right_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_bg_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ProgressBarCricle">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/unified_loading_circle_2_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">37dip</item>
        <item name="android:maxWidth">37dip</item>
        <item name="android:minHeight">37dip</item>
        <item name="android:maxHeight">37dip</item>
    </style>
    
    <style name="PopupListAnim">
        <item name="android:windowEnterAnimation">@anim/popumenu_scale_in</item>
        <item name="android:windowExitAnimation">@anim/popumenu_scale_out</item>
    </style>
</resources>