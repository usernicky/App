<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:alertDialogTheme">@style/SingleChoiceDialog</item>
    </style>

    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="unified_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LEOButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearanceSettingsNewFlag">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearanceMainTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="dlg_title_txt">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:background">@color/dialog_title_area_bg</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dlg_content_txt">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="dlg_single_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_bg_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/backup_button_text_selector</item>
        <item name="android:layout_width">129dp</item>
        <item name="android:layout_height">33dp</item>
    </style>

    <style name="dlg_left_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_bg_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/backup_button_text_selector</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">129dp</item>
    </style>

    <style name="dlg_right_button_txt">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/check_update_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/backup_button_text_selector</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">129dp</item>
    </style>

    <style name="ProgressBarCricle">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/unified_loading_circle_2_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">37dip</item>
        <item name="android:maxWidth">37dip</item>
        <item name="android:minHeight">37dip</item>
        <item name="android:maxHeight">37dip</item>
    </style>

    <style name="RightEnterAnim">
        <item name="android:windowEnterAnimation">@anim/popumenu_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/popumenu_scale_right_out</item>
    </style>

    <style name="CenterEnterAnim">
        <item name="android:windowEnterAnimation">@anim/popumenu_scale_center_in</item>
        <item name="android:windowExitAnimation">@anim/popumenu_scale_center_out</item>
    </style>
    
    <style name="PopupListAnimUpDown">
        <item name="android:windowEnterAnimation">@anim/popumenu_translate_down</item>
        <item name="android:windowExitAnimation">@anim/popumenu_translate_up</item>
    </style>

    <style name="SingleChoiceDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonBarStyle">@style/ButtonBar</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Button.Borderless</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Widget.Button.Borderless" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@drawable/backup_button_text_selector</item>
        <item name="android:background">@drawable/check_update_button</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/black</item>
        <item name="android:paddingLeft">0dip</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
