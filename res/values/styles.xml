<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- define the app theme and globle animation -->
    <style name="activity_theme" mce_bogus="1" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/activity_theme_animation</item>
        <item name="android:excludeFromRecents">true</item>
    </style>

    <style name="activity_theme_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_between_interface_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:taskCloseExitAnimation">@anim/translate_between_interface_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:taskToBackExitAnimation">@anim/translate_between_interface_right_out</item>
        <item name="android:wallpaperOpenEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:wallpaperCloseEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:wallpaperCloseExitAnimation">@anim/translate_between_interface_right_out</item>
        <item name="android:wallpaperIntraOpenEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:wallpaperIntraOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:wallpaperIntraCloseEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:wallpaperIntraCloseExitAnimation">@anim/translate_between_interface_right_out</item>
    </style>

    <style name="Theme" parent="@style/activity_theme">
        <item name="android:alertDialogTheme">@style/SingleChoiceDialog</item>
    </style>

    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="unified_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LEOButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearanceSettingsNewFlag">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearanceMainTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="dlg_title_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#676767</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dlg_title">
        <item name="android:background">@color/dialog_title_area_bg</item>
    </style>

    <style name="dlg_content_txt">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textColor">#a3a3a3</item>
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="dlg_single_button_txt_cancel">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/manager_cancel_left_button_selecter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/manager_cancel_text_selecter</item>
        <item name="android:layout_width">129dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="dlg_single_button_txt_ok">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/manager_done_right_button_selecter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/manager_backup_text_selecter</item>
        <item name="android:layout_width">129dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="dlg_left_button_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/manager_cancel_left_button_selecter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="dlg_right_button_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/manager_done_right_button_selecter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ProgressBarCricle">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/unified_loading_circle_2_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">800</item>
        <item name="android:minWidth">24dip</item>
        <item name="android:maxWidth">24dip</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="theme_loading">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/theme_loading_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="business_folder_loading">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/business_folder_loading_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="RightEnterAnim">
        <item name="android:windowEnterAnimation">@anim/popumenu_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/popumenu_scale_right_out</item>
    </style>

    <style name="CenterEnterAnim">
        <item name="android:windowEnterAnimation">@anim/popumenu_scale_center_in</item>
        <item name="android:windowExitAnimation">@anim/popumenu_scale_center_out</item>
    </style>

    <style name="PopupListAnimUpDown">
        <item name="android:windowEnterAnimation">@anim/popumenu_translate_down</item>
        <item name="android:windowExitAnimation">@anim/popumenu_translate_up</item>
    </style>

    <style name="PopupListAnimDownUp">
        <item name="android:windowEnterAnimation">@anim/popumenu_translate_up</item>
        <item name="android:windowExitAnimation">@anim/popumenu_translate_down</item>
    </style>

    <style name="SingleChoiceDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonBarStyle">@style/ButtonBar</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Button.Borderless</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Widget.Button.Borderless" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/check_update_button</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/black</item>
        <item name="android:paddingLeft">0dip</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget"></style>

    <style name="BusinessRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
    </style>

    <style name="Theme.PageIndicatorDefaults" parent="@style/activity_theme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="StyledIndicators" parent="@style/activity_theme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <!-- <item name="android:background">@drawable/vpi__tab_indicator</item> -->
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#FFFFFFFF</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ProgressBarBig">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">4dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/ele_progress_horizontal_try</item>
    </style>

</resources>